# EditorConfig for .NET projects
# Based on: DevOps Audit Report - Enterprise Standards

root = true

# All files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = crlf

# C# files
[*.cs]
indent_style = space
indent_size = 4
tab_width = 4

# XAML files
[*.{xaml,xaml.cs}]
indent_style = space
indent_size = 4
tab_width = 4

# JSON files
[*.{json,json5}]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf

# Markdown files
[*.md]
trim_trailing_whitespace = false

# PowerShell files
[*.{ps1,psm1}]
indent_style = space
indent_size = 4
tab_width = 4

# XML files
[*.{xml,csproj,props,targets,sln}]
indent_style = space
indent_size = 2
tab_width = 2

# Terraform files
[*.tf]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf

# Batch files
[*.{bat,cmd}]
end_of_line = crlf

