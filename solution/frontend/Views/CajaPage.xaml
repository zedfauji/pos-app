<Page
    x:Class="MagiDesk.Frontend.Views.CajaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:conv="using:MagiDesk.Frontend.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Caja Management" 
                       Style="{StaticResource TitleTextBlockStyle}" 
                       FontSize="32" 
                       FontWeight="Bold"/>
            <TextBlock Text="Manage cash register sessions" 
                       Style="{StaticResource BodyTextBlockStyle}" 
                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Status Card -->
        <Border Grid.Row="1" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Estado de la Caja" 
                           Style="{StaticResource SubtitleTextBlockStyle}" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock x:Name="StatusText" 
                                   Text="{x:Bind ViewModel.CajaStatusText, Mode=OneWay}"
                                   Style="{StaticResource BodyTextBlockStyle}"
                                   FontSize="16"
                                   Margin="0,0,0,8"/>
                        <TextBlock x:Name="OpenedByText" 
                                   Text="{x:Bind ViewModel.OpenedByText, Mode=OneWay}"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                   Margin="0,0,0,4"/>
                        <TextBlock x:Name="OpenedAtText" 
                                   Text="{x:Bind ViewModel.OpenedAtText, Mode=OneWay}"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                        <Button Content="Abrir Caja" 
                                Click="OpenCajaButton_Click"
                                IsEnabled="{x:Bind ViewModel.IsCajaOpen, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"
                                Style="{StaticResource AccentButtonStyle}"
                                Margin="0,0,12,0"/>
                        <Button Content="Cerrar Caja" 
                                Click="CloseCajaButton_Click"
                                IsEnabled="{x:Bind ViewModel.IsCajaOpen, Mode=OneWay}"
                                Style="{StaticResource DefaultButtonStyle}"/>
                        <Button Content="Actualizar" 
                                Command="{x:Bind ViewModel.RefreshCommand}"
                                Style="{StaticResource DefaultButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Error Message -->
        <Border Grid.Row="2" 
                x:Name="ErrorBorder"
                Background="#FFF4E1"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,20"
                Visibility="{x:Bind ViewModel.HasError, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                       Foreground="#D13438"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Loading Indicator -->
        <ProgressRing Grid.Row="2"
                      IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                      Width="50"
                      Height="50"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>

        <!-- Session History -->
        <ScrollViewer Grid.Row="2" 
                     Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                     x:Name="HistoryScrollViewer">
            <StackPanel>
                <TextBlock Text="Historial de Sesiones" 
                           Style="{StaticResource SubtitleTextBlockStyle}" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"/>
                
                <ItemsControl ItemsSource="{x:Bind ViewModel.SessionHistory, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,0,12"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding OpenedAtFormatted}"
                                                   Style="{StaticResource BodyTextBlockStyle}"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding Status}"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock>
                                            <Run Text="Monto inicial: "/>
                                            <Run Text="{Binding OpeningAmountFormatted}"/>
                                        </TextBlock>
                                        <TextBlock Visibility="{Binding ClosingAmount, Converter={StaticResource NullToVisibilityConverter}}">
                                            <Run Text="Monto final: "/>
                                            <Run Text="{Binding ClosingAmountFormatted}"/>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <Button Grid.Column="1"
                                            Content="Ver Reporte"
                                            Click="ViewReportButton_Click"
                                            Tag="{Binding Id}"
                                            Style="{StaticResource DefaultButtonStyle}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
