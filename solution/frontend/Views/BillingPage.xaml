<Page
    x:Class="MagiDesk.Frontend.Views.BillingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:MagiDesk.Frontend.Views"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Padding="24" Spacing="16">
            <TextBlock Text="Billing" FontSize="22" FontWeight="SemiBold" />

            <!-- Filters -->
            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="From" />
                    <DatePicker x:Name="FromDate" DateChanged="FromDate_DateChanged" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="To" />
                    <DatePicker x:Name="ToDate" DateChanged="ToDate_DateChanged" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Table" />
                    <TextBox x:Name="TableFilter" Width="160"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Server" />
                    <TextBox x:Name="ServerFilter" Width="160"/>
                </StackPanel>
                <Button x:Name="ApplyBtn" Content="Apply" Click="ApplyBtn_Click"/>
            </StackPanel>

            <!-- Grid -->
            <TextBlock x:Name="CountText" Text="" Opacity="0.8" />
            <ListView x:Name="BillsList" ItemsSource="{Binding Bills}" RightTapped="BillsList_RightTapped">
                <ListView.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="View receipt" Click="ViewReceipt_Click" />
                        <MenuFlyoutItem Text="Reprint" Click="Reprint_Click" />
                    </MenuFlyout>
                </ListView.ContextFlyout>
                <ListView.Header>
                    <Grid Padding="8" Background="#f0f0f0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="140"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Table" Grid.Column="0" FontWeight="SemiBold"/>
                        <TextBlock Text="Server" Grid.Column="1" FontWeight="SemiBold"/>
                        <TextBlock Text="Minutes" Grid.Column="2" FontWeight="SemiBold"/>
                        <TextBlock Text="Start" Grid.Column="3" FontWeight="SemiBold"/>
                        <TextBlock Text="End" Grid.Column="4" FontWeight="SemiBold"/>
                        <TextBlock Text="Bill Id" Grid.Column="5" FontWeight="SemiBold"/>
                        <TextBlock Text="Actions" Grid.Column="6" FontWeight="SemiBold"/>
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="140"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding TableLabel}"/>
                            <TextBlock Grid.Column="1" Text="{Binding ServerName}"/>
                            <TextBlock Grid.Column="2" Text="{Binding TotalTimeMinutes}"/>
                            <TextBlock Grid.Column="3" Text="{Binding StartLocal}"/>
                            <TextBlock Grid.Column="4" Text="{Binding EndLocal}"/>
                            <TextBlock Grid.Column="5" Text="{Binding ShortBillId}"/>
                            <StackPanel Grid.Column="6" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Left">
                                <Button Content="View" Click="ViewReceipt_Click"/>
                                <Button Content="Print" Click="ReprintButton_Click"/>
                                <Button Content="Close" Click="CloseBillButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </ScrollViewer>
</Page>
