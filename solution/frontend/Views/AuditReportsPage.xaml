<Page
    x:Class="MagiDesk.Frontend.Views.AuditReportsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:MagiDesk.Frontend.ViewModels"
    xmlns:services="using:MagiDesk.Frontend.Services"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=viewmodels:AuditReportsViewModel, Is='True'}">

    <Grid Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Actions -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,16">
            <TextBlock Text="Audit &amp; Reports" FontSize="24" FontWeight="SemiBold"/>
            <Button Content="Generate Report" Click="GenerateReport_Click" Background="{ThemeResource AccentFillColorDefaultBrush}" Foreground="White"/>
            <Button Content="Export Data" Click="ExportData_Click" Background="{ThemeResource SystemAccentColor}"/>
            <Button Content="Refresh" Click="Refresh_Click"/>
            <TextBox x:Name="SearchBox" Width="200" PlaceholderText="Search logs..." TextChanged="SearchBox_TextChanged"/>
            <ComboBox x:Name="ReportTypeFilter" PlaceholderText="Report Type" Width="150" SelectionChanged="ReportTypeFilter_SelectionChanged">
                <ComboBoxItem Content="All" Tag=""/>
                <ComboBoxItem Content="Inventory Transactions" Tag="Inventory"/>
                <ComboBoxItem Content="Vendor Orders" Tag="VendorOrders"/>
                <ComboBoxItem Content="Restock Requests" Tag="Restock"/>
                <ComboBoxItem Content="System Events" Tag="System"/>
            </ComboBox>
        </StackPanel>

        <!-- Statistics Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Transactions -->
            <Border Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="12" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="Total Transactions" FontSize="12" Opacity="0.7"/>
                    <TextBlock Text="{x:Bind _vm.TotalTransactions}" FontSize="20" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <!-- Today's Activity -->
            <Border Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="12" Margin="4,0">
                <StackPanel>
                    <TextBlock Text="Today's Activity" FontSize="12" Opacity="0.7"/>
                    <TextBlock Text="{x:Bind _vm.TodaysActivity}" FontSize="20" FontWeight="SemiBold" Foreground="{ThemeResource SystemAccentColor}"/>
                </StackPanel>
            </Border>

            <!-- Total Value -->
            <Border Grid.Column="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="12" Margin="4,0">
                <StackPanel>
                    <TextBlock Text="Total Value" FontSize="12" Opacity="0.7"/>
                    <TextBlock Text="{x:Bind _vm.TotalValue}" FontSize="20" FontWeight="SemiBold" Foreground="Green"/>
                </StackPanel>
            </Border>

            <!-- Error Count -->
            <Border Grid.Column="3" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="12" Margin="4,0">
                <StackPanel>
                    <TextBlock Text="Errors" FontSize="12" Opacity="0.7"/>
                    <TextBlock Text="{x:Bind _vm.ErrorCount}" FontSize="20" FontWeight="SemiBold" Foreground="Red"/>
                </StackPanel>
            </Border>

            <!-- Top Items -->
            <Border Grid.Column="4" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="12" Margin="8,0,0,0">
                <StackPanel>
                    <TextBlock Text="Top Items" FontSize="12" Opacity="0.7"/>
                    <TextBlock Text="{x:Bind _vm.TopItemsCount}" FontSize="20" FontWeight="SemiBold" Foreground="Blue"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Reports Tabs -->
        <TabView Grid.Row="2">
            <TabViewItem Header="Transaction Logs">
                <ListView x:Name="TransactionLogsList"
                          ItemsSource="{x:Bind _vm.TransactionLogs, Mode=OneWay}"
                          SelectionMode="Single">
                    <ListView.HeaderTemplate>
                        <DataTemplate>
                            <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Padding="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Date" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="1" Text="Type" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="2" Text="Item" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="3" Text="Quantity" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="Value" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="5" Text="User" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="6" Text="Status" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.HeaderTemplate>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="services:AuditLogDto">
                            <Grid Padding="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{x:Bind Timestamp}" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{x:Bind EntityType}" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="{x:Bind EntityId}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                <TextBlock Grid.Column="3" Text="{x:Bind Action}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="{x:Bind Details}" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="5" Text="{x:Bind UserName}" VerticalAlignment="Center"/>
                                <Border Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                        Background="LightBlue" CornerRadius="4" Padding="4,2">
                                    <TextBlock Text="{x:Bind Action}" FontSize="10" Foreground="White"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </TabViewItem>

            <TabViewItem Header="Inventory Reports">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Report Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,16">
                        <ComboBox x:Name="ReportPeriod" PlaceholderText="Period" Width="120">
                            <ComboBoxItem Content="Last 7 Days" Tag="7"/>
                            <ComboBoxItem Content="Last 30 Days" Tag="30"/>
                            <ComboBoxItem Content="Last 90 Days" Tag="90"/>
                            <ComboBoxItem Content="Last Year" Tag="365"/>
                        </ComboBox>
                        <Button Content="Generate Report" Click="GenerateInventoryReport_Click"/>
                        <Button Content="Export CSV" Click="ExportInventoryReport_Click"/>
                    </StackPanel>

                    <!-- Inventory Report Data -->
                    <ListView Grid.Row="1" x:Name="InventoryReportList"
                              ItemsSource="{x:Bind _vm.InventoryReports, Mode=OneWay}">
                        <ListView.HeaderTemplate>
                            <DataTemplate>
                                <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Padding="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Report Date" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" Text="Total Items" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="Total Value" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="3" Text="Low Stock" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="4" Text="Fast Moving" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="5" Text="Summary" FontWeight="SemiBold"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="services:InventoryReportDto">
                                <Grid Padding="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{x:Bind ReportDate}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{x:Bind TotalItems}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{x:Bind TotalValue}" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="3" Text="{x:Bind LowStockItems}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="4" Text="{x:Bind FastMovingItems}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="5" Text="{x:Bind Summary}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabViewItem>

            <TabViewItem Header="Top Selling Items">
                <ListView x:Name="TopSellingList"
                          ItemsSource="{x:Bind _vm.TopSellingItems, Mode=OneWay}">
                    <ListView.HeaderTemplate>
                        <DataTemplate>
                            <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Padding="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Item Name" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="1" Text="Quantity Sold" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="Revenue" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="3" Text="Unit Price" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="4" Text="Performance" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.HeaderTemplate>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="services:TopSellingItemDto">
                            <Grid Padding="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{x:Bind ItemName}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                <TextBlock Grid.Column="1" Text="{x:Bind QuantitySold}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="{x:Bind Revenue}" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="3" Text="{x:Bind Revenue}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="4" Text="High" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Green"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </TabViewItem>

            <TabViewItem Header="System Events">
                <ListView x:Name="SystemEventsList"
                          ItemsSource="{x:Bind _vm.SystemEvents, Mode=OneWay}">
                    <ListView.HeaderTemplate>
                        <DataTemplate>
                            <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Padding="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Timestamp" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="1" Text="Event Type" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="2" Text="Description" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="3" Text="Severity" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="User" FontWeight="SemiBold"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.HeaderTemplate>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="services:AuditLogDto">
                            <Grid Padding="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{x:Bind Timestamp}" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{x:Bind EntityType}" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="{x:Bind Details}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                <Border Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                        Background="LightCoral" CornerRadius="4" Padding="4,2">
                                    <TextBlock Text="{x:Bind Action}" FontSize="10" Foreground="White"/>
                                </Border>
                                <TextBlock Grid.Column="4" Text="{x:Bind UserName}" VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </TabViewItem>
        </TabView>
    </Grid>
</Page>
