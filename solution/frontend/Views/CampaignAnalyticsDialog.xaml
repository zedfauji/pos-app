<ContentDialog
    x:Class="MagiDesk.Frontend.Views.CampaignAnalyticsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MagiDesk.Frontend.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Campaign Analytics"
    CloseButtonText="Close"
    DefaultButton="Close"
    MaxWidth="900"
    MaxHeight="700">

    <ScrollViewer>
        <StackPanel Spacing="24" Padding="4">
            <!-- Campaign Overview -->
            <StackPanel x:Name="CampaignOverviewPanel" Spacing="12">
                <TextBlock Text="Campaign Overview" 
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Spacing="8">
                            <TextBlock x:Name="CampaignNameText" 
                                       Style="{ThemeResource TitleTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            <TextBlock x:Name="CampaignDescriptionText" 
                                       Style="{ThemeResource BodyTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <Grid Grid.Row="1" Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Status" 
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock x:Name="CampaignStatusText" 
                                           Style="{ThemeResource BodyStrongTextBlockStyle}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Type" 
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock x:Name="CampaignTypeText" 
                                           Style="{ThemeResource BodyStrongTextBlockStyle}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Channel" 
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock x:Name="CampaignChannelText" 
                                           Style="{ThemeResource BodyStrongTextBlockStyle}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Duration" 
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock x:Name="CampaignDurationText" 
                                           Style="{ThemeResource BodyStrongTextBlockStyle}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Key Metrics -->
            <StackPanel Spacing="12">
                <TextBlock Text="Key Performance Metrics" 
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Messages Sent -->
                    <Border Grid.Row="0" Grid.Column="0" 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,8,8">
                        <StackPanel>
                            <TextBlock Text="Messages Sent" 
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="MessagesSentText" 
                                       Style="{ThemeResource HeaderTextBlockStyle}"
                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                       Margin="0,4,0,0"/>
                            <TextBlock x:Name="MessagesSentChangeText" 
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Redemptions -->
                    <Border Grid.Row="0" Grid.Column="1" 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,8,8">
                        <StackPanel>
                            <TextBlock Text="Redemptions" 
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="RedemptionsText" 
                                       Style="{ThemeResource HeaderTextBlockStyle}"
                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                       Margin="0,4,0,0"/>
                            <TextBlock x:Name="RedemptionsChangeText" 
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Redemption Rate -->
                    <Border Grid.Row="0" Grid.Column="2" 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,8,8">
                        <StackPanel>
                            <TextBlock Text="Redemption Rate" 
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="RedemptionRateText" 
                                       Style="{ThemeResource HeaderTextBlockStyle}"
                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                       Margin="0,4,0,0"/>
                            <TextBlock x:Name="RedemptionRateChangeText" 
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Revenue Impact -->
                    <Border Grid.Row="0" Grid.Column="3" 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="Revenue Impact" 
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="RevenueImpactText" 
                                       Style="{ThemeResource HeaderTextBlockStyle}"
                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                       Margin="0,4,0,0"/>
                            <TextBlock x:Name="RevenueImpactChangeText" 
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Customer Engagement -->
                    <Border Grid.Row="1" Grid.Column="0" 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="Unique Customers" 
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="UniqueCustomersText" 
                                       Style="{ThemeResource HeaderTextBlockStyle}"
                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                       Margin="0,4,0,0"/>
                            <TextBlock x:Name="UniqueCustomersChangeText" 
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Average Order Value -->
                    <Border Grid.Row="1" Grid.Column="1" 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="Avg Order Value" 
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="AvgOrderValueText" 
                                       Style="{ThemeResource HeaderTextBlockStyle}"
                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                       Margin="0,4,0,0"/>
                            <TextBlock x:Name="AvgOrderValueChangeText" 
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Cost Per Acquisition -->
                    <Border Grid.Row="1" Grid.Column="2" 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="Cost Per Acquisition" 
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="CostPerAcquisitionText" 
                                       Style="{ThemeResource HeaderTextBlockStyle}"
                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                       Margin="0,4,0,0"/>
                            <TextBlock x:Name="CostPerAcquisitionChangeText" 
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- ROI -->
                    <Border Grid.Row="1" Grid.Column="3" 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel>
                            <TextBlock Text="ROI" 
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="ROIText" 
                                       Style="{ThemeResource HeaderTextBlockStyle}"
                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                       Margin="0,4,0,0"/>
                            <TextBlock x:Name="ROIChangeText" 
                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- Performance Timeline -->
            <StackPanel Spacing="12">
                <TextBlock Text="Performance Timeline" 
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="Daily Performance" 
                                       Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                            
                            <ComboBox x:Name="TimeRangeComboBox"
                                      Grid.Column="1"
                                      SelectedIndex="0"
                                      SelectionChanged="TimeRangeComboBox_SelectionChanged">
                                <ComboBoxItem Content="Last 7 days"/>
                                <ComboBoxItem Content="Last 30 days"/>
                                <ComboBoxItem Content="Campaign duration"/>
                            </ComboBox>
                        </Grid>

                        <!-- Placeholder for chart - in a real implementation, you'd use a charting library -->
                        <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Height="200">
                            <StackPanel HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Spacing="8">
                                <FontIcon Glyph="&#xE9D9;" 
                                          FontSize="32" 
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="Performance Chart" 
                                           Style="{ThemeResource BodyTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="Chart visualization would be implemented here" 
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Recent Activity -->
            <StackPanel Spacing="12">
                <TextBlock Text="Recent Activity" 
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                
                <ListView x:Name="RecentActivityListView" 
                          MaxHeight="300"
                          SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="16"
                                    Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0"
                                            Background="{Binding ActivityType, Converter={StaticResource ActivityTypeToBrushConverter}}"
                                            Width="8"
                                            Height="8"
                                            CornerRadius="4"
                                            VerticalAlignment="Top"
                                            Margin="0,6,12,0"/>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Description}" 
                                                   Style="{ThemeResource BodyTextBlockStyle}"
                                                   TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Details}" 
                                                   Style="{ThemeResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2"
                                               Text="{Binding Timestamp, Converter={StaticResource RelativeTimeConverter}}" 
                                               Style="{ThemeResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               VerticalAlignment="Top"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <!-- Loading State -->
            <StackPanel x:Name="LoadingPanel" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Spacing="16"
                        Visibility="Collapsed">
                <ProgressRing IsActive="True" Width="48" Height="48"/>
                <TextBlock Text="Loading analytics..." 
                           Style="{ThemeResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Error State -->
            <InfoBar x:Name="ErrorInfoBar"
                     Severity="Error"
                     IsOpen="False"
                     Message="Failed to load campaign analytics"/>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
