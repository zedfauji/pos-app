<Page
    x:Class="MagiDesk.Frontend.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <InfoBar x:Name="FeedbackBar" Grid.Row="0" IsOpen="False" Severity="Informational" Margin="0,0,0,12"/>

        <StackPanel Grid.Row="1" Spacing="12">
            <TextBlock Text="Dashboard" FontSize="24"/>
            <StackPanel Orientation="Horizontal" Spacing="24">
                <StackPanel Width="200" Padding="12" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <TextBlock Text="Vendors" FontSize="18"/>
                    <TextBlock x:Name="VendorsCountText" Text="0" FontSize="28"/>
                </StackPanel>
                <StackPanel Width="200" Padding="12" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <TextBlock Text="Items" FontSize="18"/>
                    <TextBlock x:Name="ItemsCountText" Text="0" FontSize="28"/>
                </StackPanel>
            </StackPanel>

            <!-- Reminders -->
            <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,12,0,0">
                <Button x:Name="BtnRefreshReminders" Content="Refresh Reminders" Click="BtnRefreshReminders_Click"/>
                <TextBlock x:Name="NoRemindersText" Text="No reminders" Visibility="Collapsed" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Spacing="6" Margin="0,12,0,0">
                <TextBlock Text="Upcoming Reminder" FontSize="18"/>
                <ListView x:Name="UpcomingList" SelectionMode="None" Height="140">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Padding="6" Spacing="4">
                                <TextBlock Text="{Binding Name}"/>
                                <TextBlock Text="{Binding Reminder}" Opacity="0.7"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <StackPanel Spacing="6" Margin="0,12,0,0">
                <TextBlock Text="Today's Reminder" FontSize="18"/>
                <ListView x:Name="TodayList" SelectionMode="None" Height="140">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Padding="6" Spacing="4">
                                <TextBlock Text="{Binding Name}"/>
                                <TextBlock Text="{Binding Reminder}" Opacity="0.7"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
