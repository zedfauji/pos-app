<Page
    x:Class="MagiDesk.Frontend.Views.SessionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d">
    <Grid Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Spacing="12">
            <TextBlock Text="Active Sessions" FontSize="20" FontWeight="SemiBold"/>
            <TextBlock Text="(auto-refreshing)" Opacity="0.6"/>
        </StackPanel>
        <controls:DataGrid Grid.Row="1"
                           x:Name="SessionsGrid"
                           AutoGenerateColumns="False"
                           IsReadOnly="True"
                           ItemsSource="{x:Bind Sessions, Mode=OneWay}">
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn Header="Session ID" Binding="{Binding SessionId}" Width="*"/>
                <controls:DataGridTextColumn Header="Billing ID" Binding="{Binding BillingId}" Width="*"/>
                <controls:DataGridTextColumn Header="Table" Binding="{Binding TableId}" Width="*"/>
                <controls:DataGridTextColumn Header="Server" Binding="{Binding ServerName}" Width="*"/>
                <controls:DataGridTextColumn Header="Start Time" Binding="{Binding StartTime}" Width="*"/>
                <controls:DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                <controls:DataGridTextColumn Header="# Items" Binding="{Binding ItemsCount}" Width="SizeToHeader"/>
                <controls:DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="SizeToHeader"/>
            </controls:DataGrid.Columns>
        </controls:DataGrid>
    </Grid>
</Page>
