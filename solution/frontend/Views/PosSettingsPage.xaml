<Page
    x:Class="MagiDesk.Frontend.Views.PosSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="24">
            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="Point of Sale Settings" FontSize="24" FontWeight="SemiBold"/>
                <TextBlock Text="Configure cash drawer, table layout, shifts, and tax settings" 
                           Opacity="0.7" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Cash Drawer Settings -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1" CornerRadius="8" Padding="24">
                <StackPanel Spacing="16">
                    <TextBlock Text="Cash Drawer Settings" FontSize="18" FontWeight="SemiBold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <CheckBox x:Name="AutoOpenOnSaleCheck" Grid.Row="0" Grid.Column="0" 
                                  Content="Auto-open on sale" Margin="0,0,12,0"/>
                        <CheckBox x:Name="AutoOpenOnRefundCheck" Grid.Row="0" Grid.Column="1" 
                                  Content="Auto-open on refund" Margin="12,0,0,0"/>

                        <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4" Margin="0,16,12,0">
                            <TextBlock Text="COM Port"/>
                            <TextBox x:Name="ComPortBox" PlaceholderText="e.g., COM1"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4" Margin="12,16,0,0">
                            <TextBlock Text="Baud Rate"/>
                            <NumberBox x:Name="BaudRateBox" PlaceholderText="9600" Minimum="1200" Maximum="115200"/>
                        </StackPanel>

                        <CheckBox x:Name="RequireManagerOverrideCheck" Grid.Row="2" Grid.Column="0" 
                                  Content="Require manager override" Margin="0,16,12,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Table Layout Settings -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1" CornerRadius="8" Padding="24">
                <StackPanel Spacing="16">
                    <TextBlock Text="Table Layout Settings" FontSize="18" FontWeight="SemiBold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4" Margin="0,0,12,0">
                            <TextBlock Text="Rate Per Minute ($)"/>
                            <NumberBox x:Name="RatePerMinuteBox" PlaceholderText="0.50" 
                                       Minimum="0.01" Maximum="999.99" SmallChange="0.01" LargeChange="0.10"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4" Margin="12,0,0,0">
                            <TextBlock Text="Warn After (minutes)"/>
                            <NumberBox x:Name="WarnAfterMinutesBox" PlaceholderText="30" 
                                       Minimum="1" Maximum="1440"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4" Margin="0,16,12,0">
                            <TextBlock Text="Auto-stop After (minutes)"/>
                            <NumberBox x:Name="AutoStopAfterMinutesBox" PlaceholderText="120" 
                                       Minimum="1" Maximum="1440"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4" Margin="12,16,0,0">
                            <TextBlock Text="Show Timer on Tables"/>
                            <CheckBox x:Name="ShowTimerOnTablesCheck" Content="Enable timer display"/>
                        </StackPanel>

                        <CheckBox x:Name="EnableAutoStopCheck" Grid.Row="2" Grid.Column="0" 
                                  Content="Enable auto-stop" Margin="0,16,12,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Shift Settings -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1" CornerRadius="8" Padding="24">
                <StackPanel Spacing="16">
                    <TextBlock Text="Shift Settings" FontSize="18" FontWeight="SemiBold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4" Margin="0,0,12,0">
                            <TextBlock Text="Shift Start Time"/>
                            <TimePicker x:Name="ShiftStartTimePicker"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4" Margin="12,0,0,0">
                            <TextBlock Text="Shift End Time"/>
                            <TimePicker x:Name="ShiftEndTimePicker"/>
                        </StackPanel>

                        <CheckBox x:Name="RequireShiftReportsCheck" Grid.Row="1" Grid.Column="0" 
                                  Content="Require shift reports" Margin="0,16,12,0"/>
                        <CheckBox x:Name="AutoCloseShiftCheck" Grid.Row="1" Grid.Column="1" 
                                  Content="Auto-close shift" Margin="12,16,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Tax Settings -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1" CornerRadius="8" Padding="24">
                <StackPanel Spacing="16">
                    <TextBlock Text="Tax Settings" FontSize="18" FontWeight="SemiBold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4" Margin="0,0,12,0">
                            <TextBlock Text="Default Tax Rate (%)"/>
                            <NumberBox x:Name="DefaultTaxRateBox" PlaceholderText="8.5" 
                                       Minimum="0" Maximum="100" SmallChange="0.1" LargeChange="1"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4" Margin="12,0,0,0">
                            <TextBlock Text="Tax Display Name"/>
                            <TextBox x:Name="TaxDisplayNameBox" PlaceholderText="Tax"/>
                        </StackPanel>

                        <CheckBox x:Name="TaxInclusivePricingCheck" Grid.Row="1" Grid.Column="0" 
                                  Content="Tax-inclusive pricing" Margin="0,16,12,0"/>
                    </Grid>

                    <!-- Additional Tax Rates -->
                    <StackPanel Spacing="12" Margin="0,16,0,0">
                        <TextBlock Text="Additional Tax Rates" FontSize="16" FontWeight="SemiBold"/>
                        <ListView x:Name="AdditionalTaxRatesList" Height="200">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBox Grid.Column="0" Text="{Binding Name}" PlaceholderText="Tax name"/>
                                        <NumberBox Grid.Column="1" Value="{Binding Rate}" Minimum="0" Maximum="100" 
                                                   SmallChange="0.1" Margin="8,0"/>
                                        <CheckBox Grid.Column="2" IsChecked="{Binding IsDefault}" 
                                                  Content="Default" Margin="8,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="Add Tax Rate" Click="AddTaxRate_Click"/>
                            <Button Content="Remove Selected" Click="RemoveTaxRate_Click"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Actions -->
            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right">
                <Button Content="Reset to Defaults"/>
                <Button Content="Save Changes" Style="{StaticResource AccentButtonStyle}"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>