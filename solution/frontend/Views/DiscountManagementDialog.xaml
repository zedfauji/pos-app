<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="MagiDesk.Frontend.Views.DiscountManagementDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MagiDesk.Frontend.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Discounts &amp; Promotions"
    PrimaryButtonText="Apply Selected"
    SecondaryButtonText="Cancel"
    DefaultButton="Primary"
    Width="800"
    Height="600">

    <ContentDialog.Resources>
        <Style x:Key="DiscountCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="DiscountTypeStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style x:Key="DiscountNameStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style x:Key="DiscountDescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="DiscountValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemFillColorSuccessBrush}"/>
        </Style>
    </ContentDialog.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Available Discounts &amp; Promotions" 
                       FontSize="20" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,8"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           x:Name="CustomerInfoText"
                           Text="Customer: Loading..." 
                           FontSize="14" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Content="Redeem Voucher" 
                            Click="RedeemVoucher_Click"
                            Style="{StaticResource AccentButtonStyle}"/>
                    <Button Content="View Combos" 
                            Click="ViewCombos_Click"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Discounts List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="DiscountsPanel" Spacing="8">
                
                <!-- Auto-Apply Discounts Section -->
                <TextBlock Text="Automatic Discounts" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,8"/>
                
                <ListView x:Name="AutoDiscountsList" 
                          SelectionMode="None"
                          IsItemClickEnabled="False">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource DiscountCardStyle}" 
                                    Background="{ThemeResource SystemFillColorSuccessBackgroundBrush}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Type}" Style="{StaticResource DiscountTypeStyle}"/>
                                        <TextBlock Text="{Binding Name}" Style="{StaticResource DiscountNameStyle}"/>
                                        <TextBlock Text="{Binding Description}" Style="{StaticResource DiscountDescriptionStyle}"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding DiscountPercentage}" 
                                                   Style="{StaticResource DiscountValueStyle}"/>
                                        <TextBlock Text="AUTO APPLIED" 
                                                   FontSize="10" 
                                                   FontWeight="Bold" 
                                                   Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                                   HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Manual Discounts Section -->
                <TextBlock Text="Available Discounts" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,16,0,8"/>
                
                <ListView x:Name="ManualDiscountsList" 
                          SelectionMode="Multiple"
                          SelectionChanged="ManualDiscountsList_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource DiscountCardStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Type}" Style="{StaticResource DiscountTypeStyle}"/>
                                        <TextBlock Text="{Binding Name}" Style="{StaticResource DiscountNameStyle}"/>
                                        <TextBlock Text="{Binding Description}" Style="{StaticResource DiscountDescriptionStyle}"/>
                                        
                                        <!-- Combo Items -->
                                        <ItemsRepeater ItemsSource="{Binding ComboItems}">
                                            <ItemsRepeater.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding ItemName}" 
                                                               FontSize="12" 
                                                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                               Margin="0,2,0,0"/>
                                                </DataTemplate>
                                            </ItemsRepeater.ItemTemplate>
                                        </ItemsRepeater>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding DiscountPercentage}" 
                                                   Style="{StaticResource DiscountValueStyle}"/>
                                        <TextBlock Text="{Binding DiscountAmount}" 
                                                   Style="{StaticResource DiscountValueStyle}"/>
                                        
                                        <!-- Voucher Code -->
                                        <TextBlock Text="{Binding VoucherCode}" 
                                                   FontSize="10" 
                                                   FontFamily="Consolas"
                                                   Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                   HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Empty State -->
                <Border x:Name="EmptyStatePanel" 
                        Visibility="Collapsed"
                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="32"
                        HorizontalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center" Spacing="8">
                        <FontIcon Glyph="&#xE7BA;" FontSize="48" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                        <TextBlock Text="No discounts available" 
                                   FontSize="16" 
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="Check back later for special offers!" 
                                   FontSize="14" 
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Summary -->
        <Border Grid.Row="2" 
                Background="{ThemeResource LayerFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="16"
                Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="SelectedDiscountsText" 
                               Text="No discounts selected" 
                               FontSize="14" 
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="TotalSavingsText" 
                               Text="Total Savings: $0.00" 
                               FontSize="12" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button x:Name="ClearAllButton" 
                            Content="Clear All" 
                            Click="ClearAll_Click"
                            IsEnabled="False"/>
                    <Button x:Name="PreviewButton" 
                            Content="Preview Total" 
                            Click="Preview_Click"
                            Style="{StaticResource AccentButtonStyle}"
                            IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</ContentDialog>
