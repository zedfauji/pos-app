<Page
    x:Class="MagiDesk.Frontend.Views.EnhancedMenuManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:MagiDesk.Frontend.Views"
    mc:Ignorable="d">
    
    <Page.Resources>
        <local:AvailabilityConverter x:Key="AvailabilityConverter"/>
        <local:TrendColorConverter x:Key="TrendColorConverter"/>
        <local:PriorityColorConverter x:Key="PriorityColorConverter"/>
        
        <DataTemplate x:Key="MenuItemTemplate">
            <Grid Width="200" Height="160">
                <Border CornerRadius="8" 
                        Padding="8" 
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CanDrag="True"
                        DragStarting="MenuItem_DragStarting"
                        Tapped="MenuItem_Tapped"
                        DoubleTapped="MenuItem_DoubleTapped">
                    <Border.ContextFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="✏️ Edit Item" Click="EditMenuItem_Click" Tag="{Binding}"/>
                            <MenuFlyoutItem Text="🔄 Toggle Availability" Click="ToggleAvailability_Click" Tag="{Binding}"/>
                            <MenuFlyoutItem Text="🗑️ Delete Item" Click="DeleteMenuItem_Click" Tag="{Binding}"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="📋 Copy Details" Click="CopyMenuItemDetails_Click" Tag="{Binding}"/>
                        </MenuFlyout>
                    </Border.ContextFlyout>
                    <StackPanel Spacing="4">
                        <Border Height="80" 
                                Background="{ThemeResource ControlFillColorDefaultBrush}"
                                CornerRadius="4">
                            <Image Source="{Binding PictureUrl}" 
                                   Stretch="UniformToFill"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="{Binding Name}" 
                                   TextWrapping="Wrap" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Price}" 
                                   Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock Text="{Binding Sku}" 
                                   FontSize="12" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="{Binding IsAvailable, Converter={StaticResource AvailabilityConverter}}" 
                                   FontSize="10" 
                                   HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    
    <Grid Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Enhanced Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title and Description -->
            <StackPanel Grid.Row="0" Margin="0,0,0,16">
                <TextBlock Text="Enhanced Menu Management" FontSize="32" FontWeight="Bold" Margin="0,0,0,8"/>
                <TextBlock Text="Comprehensive menu management with analytics, bulk operations, and advanced features" 
                           FontSize="16" Opacity="0.7"/>
            </StackPanel>

            <!-- Quick Stats Dashboard -->
            <Grid Grid.Row="1" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="8" Padding="16" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="📊" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Items" FontSize="12" Opacity="0.7" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding AnalyticsItems.Count}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="8" Padding="16" Margin="4,0">
                    <StackPanel>
                        <TextBlock Text="💰" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Revenue" FontSize="12" Opacity="0.7" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalRevenue}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="8" Padding="16" Margin="4,0">
                    <StackPanel>
                        <TextBlock Text="📈" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Top Seller" FontSize="12" Opacity="0.7" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TopSeller}" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="8" Padding="16" Margin="4,0">
                    <StackPanel>
                        <TextBlock Text="⭐" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Avg Rating" FontSize="12" Opacity="0.7" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding AverageRating}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="4" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="8" Padding="16" Margin="8,0,0,0">
                    <StackPanel>
                        <TextBlock Text="⚠️" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Alerts" FontSize="12" Opacity="0.7" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Insights.Count}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Enhanced Controls -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <AutoSuggestBox Grid.Column="0" 
                                x:Name="SearchBox"
                                PlaceholderText="Search menu items..."
                                QuerySubmitted="SearchBox_QuerySubmitted"
                                TextChanged="SearchBox_TextChanged"
                                Margin="0,0,12,0"/>

                <!-- Date Range -->
                <DatePicker Grid.Column="1" 
                           x:Name="FromDatePicker"
                           Header="From"
                           DateChanged="FromDatePicker_DateChanged"
                           Margin="0,0,8,0"/>

                <DatePicker Grid.Column="2" 
                           x:Name="ToDatePicker"
                           Header="To"
                           DateChanged="ToDatePicker_DateChanged"
                           Margin="0,0,12,0"/>

                <!-- Category Filter -->
                <ComboBox Grid.Column="3" 
                          x:Name="CategoryFilter"
                          PlaceholderText="All Categories"
                          SelectionChanged="CategoryFilter_SelectionChanged"
                          Margin="0,0,12,0"
                          Width="200"/>

                <!-- Sort Options -->
                <ComboBox Grid.Column="4" 
                          x:Name="SortOptions"
                          PlaceholderText="Sort by..."
                          SelectionChanged="SortOptions_SelectionChanged"
                          Margin="0,0,12,0"
                          Width="150">
                    <ComboBoxItem Content="Revenue" Tag="Revenue"/>
                    <ComboBoxItem Content="Orders" Tag="Orders"/>
                    <ComboBoxItem Content="Rating" Tag="Rating"/>
                    <ComboBoxItem Content="Name A-Z" Tag="NameAsc"/>
                    <ComboBoxItem Content="Name Z-A" Tag="NameDesc"/>
                </ComboBox>

                <!-- Add Menu Item -->
                <Button Grid.Column="5" 
                        Content="➕ Add Item" 
                        Click="AddMenuItem_Click"
                        Style="{StaticResource AccentButtonStyle}"
                        Margin="0,0,8,0"/>

                <!-- Bulk Actions -->
                <Button Grid.Column="6" 
                        Content="Bulk Actions" 
                        Click="BulkActions_Click"
                        Margin="0,0,8,0"/>

                <!-- Refresh Button -->
                <Button Grid.Column="7" 
                        Content="Refresh" 
                        Click="Refresh_Click"/>
            </Grid>
        </Grid>

        <!-- Enhanced TabView -->
        <TabView Grid.Row="1" x:Name="MainTabView">
            
            <!-- Analytics Tab -->
            <TabViewItem Header="📊 Analytics">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Analytics Data -->
                    <ScrollViewer Grid.Column="0">
                        <StackPanel Spacing="16">
                            <!-- Performance Chart Placeholder -->
                            <Border Height="200" 
                                    Background="{ThemeResource ControlFillColorDefaultBrush}"
                                    CornerRadius="8" Padding="16">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="📈" FontSize="48" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Performance Chart" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Revenue and order trends over time" FontSize="12" Opacity="0.7" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Analytics Items -->
                            <ListView ItemsSource="{Binding AnalyticsItems}" 
                                      SelectionMode="Single"
                                      SelectionChanged="AnalyticsItems_SelectionChanged">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="16" Margin="0,0,0,8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="16"/>
                                                <TextBlock Text="Menu Item" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                                                <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,8,0,0">
                                                    <TextBlock FontWeight="SemiBold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}">
                                                        <TextBlock.Text>
                                                            <Binding Path="Revenue"/>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding Orders}" FontWeight="SemiBold"/>
                                                    <TextBlock Text="orders" FontSize="12" Opacity="0.7"/>
                                                    <TextBlock FontWeight="SemiBold">
                                                        <TextBlock.Text>
                                                            <Binding Path="Rating"/>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                                <TextBlock FontSize="12">
                                                    <TextBlock.Text>
                                                        <Binding Path="Name"/>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="📊" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                <TextBlock Text="Analytics" FontSize="10" Opacity="0.7" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Separator -->
                    <Border Grid.Column="1" Background="{ThemeResource ControlStrokeColorDefaultBrush}"/>

                    <!-- Insights Panel -->
                    <ScrollViewer Grid.Column="2">
                        <StackPanel Spacing="12">
                            <TextBlock Text="💡 Insights" FontSize="18" FontWeight="SemiBold"/>
                            
                            <ListView ItemsSource="{Binding Insights}" Height="400">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="12" Margin="0,0,0,8" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="6">
                                            <StackPanel Spacing="4">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <TextBlock FontSize="16">
                                                        <TextBlock.Text>
                                                            <Binding Path="Type"/>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                    <TextBlock FontSize="12">
                                                        <TextBlock.Text>
                                                            <Binding Path="Priority"/>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                    <TextBlock FontWeight="SemiBold" FontSize="14">
                                                        <TextBlock.Text>
                                                            <Binding Path="Type"/>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Message}" FontSize="12" TextWrapping="Wrap"/>
                                                <TextBlock Text="Action may be required" FontSize="11" Opacity="0.8" TextWrapping="Wrap"/>
                                                <TextBlock Text="Generated now" FontSize="10" Opacity="0.6"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabViewItem>

            <!-- Menu Items Tab -->
            <TabViewItem Header="🍽️ Menu Items">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <!-- Menu Items by Category -->
                    <Grid Grid.Column="0">
                        <ScrollViewer x:Name="MenuItemsScrollViewer">
                            <StackPanel x:Name="CategoriesContainer" Spacing="24">
                                <!-- Categories will be dynamically generated here -->
                            </StackPanel>
                        </ScrollViewer>
                        
                        <!-- Floating Action Buttons -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right" 
                                    VerticalAlignment="Bottom" 
                                    Margin="0,0,20,20"
                                    Spacing="12">
                            <Button x:Name="QuickEditButton" 
                                    Content="✏️" 
                                    Click="EditMenuItem_Click"
                                    Style="{StaticResource AccentButtonStyle}"
                                    Width="56" Height="56"
                                    CornerRadius="28"
                                    FontSize="20"
                                    ToolTipService.ToolTip="Edit Selected Item"
                                    IsEnabled="False"/>
                            <Button x:Name="QuickToggleButton" 
                                    Content="🔄" 
                                    Click="ToggleAvailability_Click"
                                    Style="{StaticResource AccentButtonStyle}"
                                    Width="56" Height="56"
                                    CornerRadius="28"
                                    FontSize="20"
                                    ToolTipService.ToolTip="Toggle Availability"
                                    IsEnabled="False"/>
                            <Button x:Name="QuickDeleteButton" 
                                    Content="🗑️" 
                                    Click="DeleteMenuItem_Click"
                                    Background="{ThemeResource SystemFillColorCriticalBrush}"
                                    Width="56" Height="56"
                                    CornerRadius="28"
                                    FontSize="20"
                                    ToolTipService.ToolTip="Delete Selected Item"
                                    IsEnabled="False"/>
                        </StackPanel>
                    </Grid>

                    <!-- Separator -->
                    <Border Grid.Column="1" Background="{ThemeResource ControlStrokeColorDefaultBrush}"/>

                    <!-- Enhanced Details Panel -->
                    <Grid Grid.Column="2" x:Name="MenuItemDetailsPanel" Visibility="Collapsed">
                        <ScrollViewer>
                            <StackPanel Spacing="16">
                                <!-- Header -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Menu Item Details" FontSize="20" FontWeight="SemiBold"/>
                                    <Border Height="2" Background="{ThemeResource AccentTextFillColorPrimaryBrush}" 
                                            HorizontalAlignment="Left" Width="60"/>
                                </StackPanel>
                                
                                <!-- Quick Actions -->
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Button Content="✏️ Edit" Click="EditMenuItem_Click" x:Name="EditButton" Style="{StaticResource AccentButtonStyle}"/>
                                    <Button Content="🗑️ Delete" Click="DeleteMenuItem_Click" x:Name="DeleteButton"/>
                                    <Button Content="🔄 Toggle" Click="ToggleAvailability_Click" x:Name="ToggleAvailabilityButton"/>
                                </StackPanel>

                                <!-- Item Image -->
                                <Border Height="200" Background="{ThemeResource ControlFillColorDefaultBrush}" CornerRadius="8" x:Name="ItemImageBorder">
                                    <Image Source="{Binding SelectedMenuItem.PictureUrl}" Stretch="UniformToFill"/>
                                </Border>
                                
                                <!-- Basic Info -->
                                <StackPanel Spacing="12">
                                    <TextBlock Text="Basic Information" FontSize="16" FontWeight="SemiBold"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedMenuItem.MenuItemId}"/>
                                        
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Name:" FontWeight="SemiBold" Margin="0,8,8,0"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedMenuItem.Name}" TextWrapping="Wrap" Margin="0,8,0,0"/>
                                        
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="SKU:" FontWeight="SemiBold" Margin="0,8,8,0"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedMenuItem.Sku}" Margin="0,8,0,0"/>
                                        
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Price:" FontWeight="SemiBold" Margin="0,8,8,0"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedMenuItem.Price}" 
                                                   Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" Margin="0,8,0,0"/>
                                        
                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Category:" FontWeight="SemiBold" Margin="0,8,8,0"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedMenuItem.Category}" Margin="0,8,0,0"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Status Flags -->
                                <StackPanel Spacing="12">
                                    <TextBlock Text="Status &amp; Properties" FontSize="16" FontWeight="SemiBold"/>
                                    
                                    <StackPanel Spacing="8">
                                        <CheckBox Content="Available for Sale" IsChecked="{Binding SelectedMenuItem.IsAvailable}" IsEnabled="False"/>
                                        <CheckBox Content="Can Apply Discounts" IsChecked="{Binding SelectedMenuItem.IsDiscountable}" IsEnabled="False"/>
                                        <CheckBox Content="Part of Combo Meals" IsChecked="{Binding SelectedMenuItem.IsPartOfCombo}" IsEnabled="False"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </TabViewItem>

            <!-- Bulk Operations Tab -->
            <TabViewItem Header="⚡ Bulk Operations">
                <Grid Padding="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Bulk Operations Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Bulk Operations" FontSize="24" FontWeight="Bold" Margin="0,0,0,8"/>
                        <TextBlock Text="Perform operations on multiple menu items simultaneously" FontSize="14" Opacity="0.7"/>
                    </StackPanel>

                    <!-- Bulk Operations Grid -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Price Operations -->
                        <Border Grid.Row="0" Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                CornerRadius="8" Padding="20" Margin="0,0,10,10">
                            <StackPanel Spacing="12">
                                <TextBlock Text="💰 Price Operations" FontSize="18" FontWeight="SemiBold"/>
                                
                                <StackPanel Spacing="8">
                                    <TextBox x:Name="PriceChangeTextBox" PlaceholderText="Price change amount" Header="Amount"/>
                                    <ComboBox x:Name="PriceOperationComboBox" Header="Operation">
                                        <ComboBoxItem Content="Add" Tag="Add"/>
                                        <ComboBoxItem Content="Subtract" Tag="Subtract"/>
                                        <ComboBoxItem Content="Multiply by" Tag="Multiply"/>
                                        <ComboBoxItem Content="Set to" Tag="Set"/>
                                    </ComboBox>
                                    <Button Content="Update Prices" Click="UpdatePrices_Click" Style="{StaticResource AccentButtonStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Category Operations -->
                        <Border Grid.Row="0" Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                CornerRadius="8" Padding="20" Margin="10,0,0,10">
                            <StackPanel Spacing="12">
                                <TextBlock Text="📁 Category Operations" FontSize="18" FontWeight="SemiBold"/>
                                
                                <StackPanel Spacing="8">
                                    <ComboBox x:Name="NewCategoryComboBox" PlaceholderText="Select new category" Header="New Category"/>
                                    <Button Content="Change Category" Click="ChangeCategory_Click" Style="{StaticResource AccentButtonStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Availability Operations -->
                        <Border Grid.Row="1" Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                CornerRadius="8" Padding="20" Margin="0,10,10,0">
                            <StackPanel Spacing="12">
                                <TextBlock Text="🔄 Availability Operations" FontSize="18" FontWeight="SemiBold"/>
                                
                                <StackPanel Spacing="8">
                                    <ComboBox x:Name="AvailabilityComboBox" Header="Availability">
                                        <ComboBoxItem Content="Make Available" Tag="true"/>
                                        <ComboBoxItem Content="Make Unavailable" Tag="false"/>
                                    </ComboBox>
                                    <Button Content="Update Availability" Click="UpdateAvailability_Click" Style="{StaticResource AccentButtonStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Image Operations -->
                        <Border Grid.Row="1" Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                CornerRadius="8" Padding="20" Margin="10,10,0,0">
                            <StackPanel Spacing="12">
                                <TextBlock Text="🖼️ Image Operations" FontSize="18" FontWeight="SemiBold"/>
                                
                                <StackPanel Spacing="8">
                                    <TextBox x:Name="ImageUrlTextBox" PlaceholderText="Image URL" Header="Image URL"/>
                                    <Button Content="Update Images" Click="UpdateImages_Click" Style="{StaticResource AccentButtonStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </TabViewItem>

            <!-- Trends Tab -->
            <TabViewItem Header="📈 Trends">
                <ScrollViewer>
                    <StackPanel Spacing="16" Padding="20">
                        <TextBlock Text="Menu Trends &amp; Insights" FontSize="24" FontWeight="Bold" Margin="0,0,0,16"/>
                        
                        <ListView ItemsSource="{Binding Trends}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="16" Margin="0,0,0,12" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding TrendIcon}" FontSize="32" Margin="0,0,16,0"/>
                                            
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Category}" FontSize="18" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding ChangePercentageText}" FontSize="16" 
                                                           Foreground="{Binding TrendColor, Converter={StaticResource TrendColorConverter}}"/>
                                                <TextBlock Text="{Binding Recommendation}" FontSize="14" Opacity="0.8" TextWrapping="Wrap" Margin="0,4,0,0"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding RevenueChangeText}" FontSize="14" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding OrderChangeText}" FontSize="12" Opacity="0.7"/>
                                                <TextBlock Text="orders" FontSize="12" Opacity="0.7"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </TabViewItem>
        </TabView>
    </Grid>
</Page>
