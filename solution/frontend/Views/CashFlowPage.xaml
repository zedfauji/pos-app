<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="MagiDesk.Frontend.Views.CashFlowPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Professional Styles -->
        <Style x:Key="PageTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="PageSubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,24"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefault}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="FormCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefault}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,24"/>
            <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
            <Setter Property="Foreground" Value="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource ControlFillColorDefaultBrush}"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="CashFlowItemStyle" TargetType="Grid">
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefault}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefault}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
            <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="MinWidth" Value="200"/>
        </Style>

        <Style x:Key="MetricTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="MetricValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        </Style>
    </Page.Resources>

    <ScrollViewer Padding="24">
        <StackPanel Spacing="24">
            <!-- Header Section -->
            <StackPanel>
                <TextBlock Text="Cash Flow Management" Style="{StaticResource PageTitleStyle}"/>
                <TextBlock Text="Track daily cash entries and monitor cash flow patterns" Style="{StaticResource PageSubtitleStyle}"/>
            </StackPanel>

            <!-- Metrics Overview -->
            <StackPanel Orientation="Horizontal" Spacing="16">
                <Border Style="{StaticResource MetricCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Total Cash This Week" Style="{StaticResource MetricTitleStyle}"/>
                        <TextBlock x:Name="WeeklyTotalText" Text="$0.00" Style="{StaticResource MetricValueStyle}"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource MetricCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Today's Entries" Style="{StaticResource MetricTitleStyle}"/>
                        <TextBlock x:Name="TodayEntriesText" Text="0" Style="{StaticResource MetricValueStyle}"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource MetricCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Average Daily" Style="{StaticResource MetricTitleStyle}"/>
                        <TextBlock x:Name="AverageDailyText" Text="$0.00" Style="{StaticResource MetricValueStyle}"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Cash Entry Form -->
            <Border Style="{StaticResource FormCardStyle}">
                <StackPanel Spacing="20">
                    <TextBlock Text="Add Cash Entry" FontSize="20" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Employee Name -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,16,0">
                            <TextBlock Text="Employee Name" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBox x:Name="EmployeeNameBox" 
                                     Text="{Binding EmployeeName, Mode=TwoWay}"
                                     PlaceholderText="Enter employee name"
                                     IsReadOnly="True"
                                     Background="{ThemeResource ControlFillColorDefaultBrush}"/>
                        </StackPanel>

                        <!-- Date -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,16,0">
                            <TextBlock Text="Date" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <DatePicker x:Name="EntryDatePicker" 
                                        Date="{Binding Date, Mode=TwoWay}"
                                        HorizontalAlignment="Stretch"/>
                        </StackPanel>

                        <!-- Cash Amount -->
                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,16,0">
                            <TextBlock Text="Cash Amount" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <NumberBox x:Name="CashAmountBox" 
                                       Value="{Binding CashAmount, Mode=TwoWay}"
                                       PlaceholderText="0.00"
                                       HorizontalAlignment="Stretch"/>
                        </StackPanel>

                        <!-- Submit Button -->
                        <Button Grid.Row="0" Grid.Column="3" 
                                x:Name="SubmitBtn" 
                                Content="Submit Entry" 
                                Click="Submit_Click"
                                Style="{StaticResource PrimaryButtonStyle}"
                                VerticalAlignment="Bottom"/>

                        <!-- Notes -->
                        <StackPanel Grid.Row="1" Grid.ColumnSpan="4" Margin="0,16,0,0">
                            <TextBlock Text="Notes (Optional)" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBox x:Name="NotesBox" 
                                     Text="{Binding Notes, Mode=TwoWay}"
                                     PlaceholderText="Add any additional notes..."
                                     AcceptsReturn="True" 
                                     Height="80" 
                                     TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Action Bar -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button x:Name="BtnRefresh" 
                        Click="Refresh_Click"
                        Style="{StaticResource SecondaryButtonStyle}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                            <TextBlock Text="Refresh Data"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button x:Name="BtnExport" 
                        Click="Export_Click"
                        Style="{StaticResource SecondaryButtonStyle}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE792;" FontSize="16"/>
                            <TextBlock Text="Export to CSV"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>

            <!-- Cash Flow History -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE8F5;" FontSize="20" Foreground="{ThemeResource TextFillColorPrimaryBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="Cash Flow History" FontSize="20" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                    
                    <ListView x:Name="HistoryGrid"
                              ItemsSource="{Binding HistoryDisplay}"
                              Background="Transparent">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CashFlowItemStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Employee -->
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding EmployeeName}" 
                                                       FontWeight="SemiBold" 
                                                       FontSize="14"
                                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                        </StackPanel>
                                        
                                        <!-- Date -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Date}" 
                                                       FontSize="14"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </StackPanel>
                                        
                                        <!-- Cash Amount -->
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="{Binding CashAmount}" 
                                                       FontWeight="SemiBold"
                                                       FontSize="14"
                                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                        </StackPanel>
                                        
                                        <!-- Notes -->
                                        <StackPanel Grid.Column="3">
                                            <TextBlock Text="{Binding Notes}" 
                                                       FontSize="14"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <!-- Actions -->
                                        <StackPanel Grid.Column="4" Orientation="Horizontal" Spacing="8">
                                            <Button Content="Edit" 
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Padding="8,4"
                                                    FontSize="12"
                                                    Click="EditEntry_Click"
                                                    Tag="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Feedback Bar -->
            <InfoBar x:Name="FeedbackBar" 
                     IsOpen="False"
                     CornerRadius="8"/>
        </StackPanel>
    </ScrollViewer>
</Page>
