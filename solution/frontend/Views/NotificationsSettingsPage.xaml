<Page
    x:Class="MagiDesk.Frontend.Views.NotificationsSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="24">
            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="Notification Settings" FontSize="24" FontWeight="SemiBold"/>
                <TextBlock Text="Configure email, SMS, push notifications, and alert settings" 
                           Opacity="0.7" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Email Settings -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1" CornerRadius="8" Padding="24">
                <StackPanel Spacing="16">
                    <TextBlock Text="Email Settings" FontSize="18" FontWeight="SemiBold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <CheckBox x:Name="EnableEmailCheck" Grid.Row="0" Grid.Column="0" 
                                  Content="Enable email notifications" Margin="0,0,12,0"/>

                        <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4" Margin="12,0,0,0">
                            <TextBlock Text="SMTP Server"/>
                            <TextBox x:Name="SmtpServerBox" PlaceholderText="smtp.gmail.com"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4" Margin="0,16,12,0">
                            <TextBlock Text="SMTP Port"/>
                            <NumberBox x:Name="SmtpPortBox" PlaceholderText="587" 
                                       Minimum="1" Maximum="65535"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4" Margin="12,16,0,0">
                            <TextBlock Text="Username"/>
                            <TextBox x:Name="EmailUsernameBox" PlaceholderText="your-email@gmail.com"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0" Spacing="4" Margin="0,16,12,0">
                            <TextBlock Text="Password"/>
                            <PasswordBox x:Name="EmailPasswordBox" PlaceholderText="Enter password"/>
                        </StackPanel>

                        <CheckBox x:Name="UseSslCheck" Grid.Row="2" Grid.Column="1" 
                                  Content="Use SSL" Margin="12,16,0,0"/>

                        <StackPanel Grid.Row="3" Grid.Column="0" Spacing="4" Margin="0,16,12,0">
                            <TextBlock Text="From Address"/>
                            <TextBox x:Name="FromAddressBox" PlaceholderText="noreply@yourbusiness.com"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="1" Spacing="4" Margin="12,16,0,0">
                            <TextBlock Text="From Name"/>
                            <TextBox x:Name="FromNameBox" PlaceholderText="Your Business Name"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- SMS Settings -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1" CornerRadius="8" Padding="24">
                <StackPanel Spacing="16">
                    <TextBlock Text="SMS Settings" FontSize="18" FontWeight="SemiBold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <CheckBox x:Name="EnableSmsCheck" Grid.Row="0" Grid.Column="0" 
                                  Content="Enable SMS notifications" Margin="0,0,12,0"/>

                        <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4" Margin="12,0,0,0">
                            <TextBlock Text="Provider"/>
                            <ComboBox x:Name="SmsProviderCombo" PlaceholderText="Select provider">
                                <ComboBoxItem Content="Twilio"/>
                                <ComboBoxItem Content="AWS SNS"/>
                                <ComboBoxItem Content="Azure Communication Services"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4" Margin="0,16,12,0">
                            <TextBlock Text="API Key"/>
                            <PasswordBox x:Name="SmsApiKeyBox" PlaceholderText="Enter API key"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4" Margin="12,16,0,0">
                            <TextBlock Text="API Secret"/>
                            <PasswordBox x:Name="SmsApiSecretBox" PlaceholderText="Enter API secret"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0" Spacing="4" Margin="0,16,12,0">
                            <TextBlock Text="From Number"/>
                            <TextBox x:Name="SmsFromNumberBox" PlaceholderText="+1234567890"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Push Notifications -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1" CornerRadius="8" Padding="24">
                <StackPanel Spacing="16">
                    <TextBlock Text="Push Notifications" FontSize="18" FontWeight="SemiBold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <CheckBox x:Name="EnablePushCheck" Grid.Row="0" Grid.Column="0" 
                                  Content="Enable push notifications" Margin="0,0,12,0"/>

                        <CheckBox x:Name="ShowStockAlertsCheck" Grid.Row="0" Grid.Column="1" 
                                  Content="Show stock alerts" Margin="12,0,0,0"/>

                        <CheckBox x:Name="ShowOrderAlertsCheck" Grid.Row="1" Grid.Column="0" 
                                  Content="Show order alerts" Margin="0,16,12,0"/>

                        <CheckBox x:Name="ShowPaymentAlertsCheck" Grid.Row="1" Grid.Column="1" 
                                  Content="Show payment alerts" Margin="12,16,0,0"/>

                        <CheckBox x:Name="ShowSystemAlertsCheck" Grid.Row="2" Grid.Column="0" 
                                  Content="Show system alerts" Margin="0,16,12,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Alert Settings -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1" CornerRadius="8" Padding="24">
                <StackPanel Spacing="16">
                    <TextBlock Text="Alert Settings" FontSize="18" FontWeight="SemiBold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <CheckBox x:Name="EnableSoundAlertsCheck" Grid.Row="0" Grid.Column="0" 
                                  Content="Enable sound alerts" Margin="0,0,12,0"/>

                        <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4" Margin="12,0,0,0">
                            <TextBlock Text="Alert Volume (%)"/>
                            <Slider x:Name="AlertVolumeSlider" Minimum="1" Maximum="100" Value="50"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4" Margin="0,16,12,0">
                            <TextBlock Text="Alert Sound Path"/>
                            <TextBox x:Name="AlertSoundPathBox" PlaceholderText="C:\Sounds\alert.wav"/>
                        </StackPanel>
                    </Grid>

                    <!-- Threshold Alerts -->
                    <StackPanel Spacing="12" Margin="0,16,0,0">
                        <TextBlock Text="Threshold Alerts" FontSize="16" FontWeight="SemiBold"/>
                        <ListView x:Name="ThresholdAlertsList" Height="200">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBox Grid.Column="0" Text="{Binding Name}" PlaceholderText="Alert name"/>
                                        <ComboBox Grid.Column="1" SelectedItem="{Binding Type}" Margin="8,0">
                                            <ComboBoxItem Content="Stock"/>
                                            <ComboBoxItem Content="Revenue"/>
                                            <ComboBoxItem Content="Orders"/>
                                        </ComboBox>
                                        <NumberBox Grid.Column="2" Value="{Binding Threshold}" 
                                                   Minimum="0" Maximum="999999" Margin="8,0"/>
                                        <CheckBox Grid.Column="3" IsChecked="{Binding IsEnabled}" 
                                                  Content="Enabled" Margin="8,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="Add Alert" Click="AddThresholdAlert_Click"/>
                            <Button Content="Remove Selected" Click="RemoveThresholdAlert_Click"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Actions -->
            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right">
                <Button Content="Reset to Defaults"/>
                <Button Content="Save Changes" Style="{StaticResource AccentButtonStyle}"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

