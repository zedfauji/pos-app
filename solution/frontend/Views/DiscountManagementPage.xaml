<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MagiDesk.Frontend.Views.DiscountManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="ManagementCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,24"/>
        </Style>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel Padding="24" MaxWidth="1400">
            <!-- Header -->
            <StackPanel Margin="0,0,0,32">
                <TextBlock Text="🎯 Discount Management" Style="{StaticResource HeaderStyle}"/>
                <TextBlock Text="Create, edit, and manage discount campaigns, vouchers, and combo deals" 
                           Style="{StaticResource SubHeaderStyle}"/>
            </StackPanel>

            <!-- Action Bar -->
            <Border Style="{StaticResource ManagementCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                        <TextBox x:Name="SearchBox" 
                                 PlaceholderText="Search discounts..." 
                                 Width="300"
                                 TextChanged="SearchBox_TextChanged"/>
                        <ComboBox x:Name="FilterComboBox" 
                                  PlaceholderText="Filter by type"
                                  Width="150"
                                  SelectionChanged="FilterComboBox_SelectionChanged">
                            <ComboBoxItem Content="All Types"/>
                            <ComboBoxItem Content="Percentage"/>
                            <ComboBoxItem Content="Fixed Amount"/>
                            <ComboBoxItem Content="Voucher"/>
                            <ComboBoxItem Content="Combo Deal"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                        <Button Content="📊 Analytics" 
                                Click="Analytics_Click"
                                Style="{StaticResource DefaultButtonStyle}"/>
                        <Button Content="➕ New Discount" 
                                Click="NewDiscount_Click"
                                Style="{StaticResource AccentButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Discount Categories -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Active Discounts -->
                <Border Grid.Column="0" Style="{StaticResource ManagementCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="🟢 Active Discounts" FontSize="18" FontWeight="SemiBold"/>
                            <Button Grid.Column="1" Content="➕" 
                                    Width="32" Height="32"
                                    Click="NewActiveDiscount_Click"
                                    ToolTipService.ToolTip="Add Active Discount"/>
                        </Grid>

                        <ListView x:Name="ActiveDiscountsList" 
                                  Height="300"
                                  SelectionMode="Single"
                                  SelectionChanged="ActiveDiscountsList_SelectionChanged">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Description}" 
                                                       FontSize="12" 
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock FontSize="11" 
                                                       Foreground="{ThemeResource TextFillColorTertiaryBrush}">
                                                <Run Text="Valid until:"/>
                                                <Run Text="{Binding EndDate}"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding DiscountValue}" 
                                                   FontWeight="Bold"
                                                   Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="8,0"/>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4">
                                            <Button Content="✏️" 
                                                    Width="28" Height="28"
                                                    Click="EditDiscount_Click"
                                                    Tag="{Binding}"
                                                    ToolTipService.ToolTip="Edit"/>
                                            <Button Content="🗑️" 
                                                    Width="28" Height="28"
                                                    Click="DeleteDiscount_Click"
                                                    Tag="{Binding}"
                                                    ToolTipService.ToolTip="Delete"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <!-- Vouchers -->
                <Border Grid.Column="2" Style="{StaticResource ManagementCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="🎫 Vouchers" FontSize="18" FontWeight="SemiBold"/>
                            <Button Grid.Column="1" Content="➕" 
                                    Width="32" Height="32"
                                    Click="NewVoucher_Click"
                                    ToolTipService.ToolTip="Add Voucher"/>
                        </Grid>

                        <ListView x:Name="VouchersList" 
                                  Height="300"
                                  SelectionMode="Single">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Code}" 
                                                       FontFamily="Consolas"
                                                       FontSize="12" 
                                                       Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                                            <TextBlock FontSize="11" 
                                                       Foreground="{ThemeResource TextFillColorTertiaryBrush}">
                                                <Run Text="Expires:"/>
                                                <Run Text="{Binding ExpiryDate}"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4">
                                            <Button Content="✏️" 
                                                    Width="28" Height="28"
                                                    Click="EditVoucher_Click"
                                                    Tag="{Binding}"
                                                    ToolTipService.ToolTip="Edit"/>
                                            <Button Content="🗑️" 
                                                    Width="28" Height="28"
                                                    Click="DeleteVoucher_Click"
                                                    Tag="{Binding}"
                                                    ToolTipService.ToolTip="Delete"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <!-- Combo Deals -->
                <Border Grid.Column="4" Style="{StaticResource ManagementCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="🍔 Combo Deals" FontSize="18" FontWeight="SemiBold"/>
                            <Button Grid.Column="1" Content="➕" 
                                    Width="32" Height="32"
                                    Click="NewCombo_Click"
                                    ToolTipService.ToolTip="Add Combo Deal"/>
                        </Grid>

                        <ListView x:Name="CombosList" 
                                  Height="300"
                                  SelectionMode="Single">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Description}" 
                                                       FontSize="12" 
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock Text="{Binding OriginalPrice}" 
                                                           FontSize="11"
                                                           TextDecorations="Strikethrough"
                                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                                <TextBlock Text="{Binding ComboPrice}" 
                                                           FontSize="11"
                                                           FontWeight="Bold"
                                                           Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding SavingsAmount}" 
                                                   FontWeight="Bold"
                                                   Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="8,0"/>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4">
                                            <Button Content="✏️" 
                                                    Width="28" Height="28"
                                                    Click="EditCombo_Click"
                                                    Tag="{Binding}"
                                                    ToolTipService.ToolTip="Edit"/>
                                            <Button Content="🗑️" 
                                                    Width="28" Height="28"
                                                    Click="DeleteCombo_Click"
                                                    Tag="{Binding}"
                                                    ToolTipService.ToolTip="Delete"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Statistics -->
            <Border Style="{StaticResource ManagementCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock x:Name="TotalDiscountsText" Text="0" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Discounts" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock x:Name="ActiveDiscountsText" Text="0" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Active Now" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock x:Name="TotalSavingsText" Text="$0.00" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                        <TextBlock Text="Total Savings" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                        <TextBlock x:Name="UsageCountText" Text="0" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Times Used" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
