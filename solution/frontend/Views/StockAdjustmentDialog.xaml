<ContentDialog
    x:Class="MagiDesk.Frontend.Views.StockAdjustmentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Adjust Stock"
    PrimaryButtonText="Apply"
    CloseButtonText="Cancel"
    DefaultButton="Primary">
    <Grid MinWidth="300" Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Item Info -->
        <TextBlock Grid.Row="0" x:Name="ItemInfoText" FontWeight="SemiBold" Margin="0,0,0,16"/>

        <!-- Adjustment Type -->
        <TextBlock Grid.Row="1" Text="Adjustment Type" FontWeight="SemiBold" Margin="0,0,0,4"/>
        <ComboBox Grid.Row="2" x:Name="AdjustmentTypeBox" Margin="0,0,0,16" SelectionChanged="AdjustmentTypeBox_SelectionChanged">
            <ComboBoxItem Content="Add Stock" Tag="Add"/>
            <ComboBoxItem Content="Remove Stock" Tag="Remove"/>
            <ComboBoxItem Content="Set Stock" Tag="Set"/>
        </ComboBox>

        <!-- Adjustment Amount -->
        <TextBlock Grid.Row="3" Text="Amount" FontWeight="SemiBold" Margin="0,0,0,4"/>
        <NumberBox Grid.Row="4" x:Name="AmountBox" Value="0" Minimum="0" Margin="0,0,0,16"/>

        <!-- Notes -->
        <TextBlock Grid.Row="5" Text="Notes (Optional)" FontWeight="SemiBold" Margin="0,0,0,4"/>
        <TextBox Grid.Row="6" x:Name="NotesBox" PlaceholderText="Enter adjustment reason..." AcceptsReturn="True" Height="60"/>
    </Grid>
</ContentDialog>
