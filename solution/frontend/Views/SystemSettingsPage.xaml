<Page
    x:Class="MagiDesk.Frontend.Views.SystemSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="24">
            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="System Settings" FontSize="24" FontWeight="SemiBold"/>
                <TextBlock Text="Configure logging, tracing, background jobs, and performance settings" 
                           Opacity="0.7" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Logging Settings -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1" CornerRadius="8" Padding="24">
                <StackPanel Spacing="16">
                    <TextBlock Text="Logging Settings" FontSize="18" FontWeight="SemiBold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4" Margin="0,0,12,0">
                            <TextBlock Text="Log Level"/>
                            <ComboBox x:Name="LogLevelCombo" PlaceholderText="Select log level">
                                <ComboBoxItem Content="Trace"/>
                                <ComboBoxItem Content="Debug"/>
                                <ComboBoxItem Content="Information"/>
                                <ComboBoxItem Content="Warning"/>
                                <ComboBoxItem Content="Error"/>
                                <ComboBoxItem Content="Critical"/>
                            </ComboBox>
                        </StackPanel>

                        <CheckBox x:Name="EnableFileLoggingCheck" Grid.Row="0" Grid.Column="1" 
                                  Content="Enable file logging" Margin="12,0,0,0"/>

                        <CheckBox x:Name="EnableConsoleLoggingCheck" Grid.Row="1" Grid.Column="0" 
                                  Content="Enable console logging" Margin="0,16,12,0"/>

                        <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4" Margin="12,16,0,0">
                            <TextBlock Text="Log File Path"/>
                            <TextBox x:Name="LogFilePathBox" PlaceholderText="logs/magidesk.log"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0" Spacing="4" Margin="0,16,12,0">
                            <TextBlock Text="Max Log File Size (MB)"/>
                            <NumberBox x:Name="MaxLogFileSizeBox" PlaceholderText="10" 
                                       Minimum="1" Maximum="100"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="1" Spacing="4" Margin="12,16,0,0">
                            <TextBlock Text="Max Log Files"/>
                            <NumberBox x:Name="MaxLogFilesBox" PlaceholderText="10" 
                                       Minimum="1" Maximum="100"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="0" Spacing="4" Margin="0,16,12,0">
                            <TextBlock Text="Log Retention (days)"/>
                            <NumberBox x:Name="LogRetentionDaysBox" PlaceholderText="30" 
                                       Minimum="1" Maximum="365"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Tracing Settings -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1" CornerRadius="8" Padding="24">
                <StackPanel Spacing="16">
                    <TextBlock Text="Tracing Settings" FontSize="18" FontWeight="SemiBold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <CheckBox x:Name="EnableTracingCheck" Grid.Row="0" Grid.Column="0" 
                                  Content="Enable tracing" Margin="0,0,12,0"/>

                        <CheckBox x:Name="TraceApiCallsCheck" Grid.Row="0" Grid.Column="1" 
                                  Content="Trace API calls" Margin="12,0,0,0"/>

                        <CheckBox x:Name="TraceDbQueriesCheck" Grid.Row="1" Grid.Column="0" 
                                  Content="Trace database queries" Margin="0,16,12,0"/>

                        <CheckBox x:Name="TraceUserActionsCheck" Grid.Row="1" Grid.Column="1" 
                                  Content="Trace user actions" Margin="12,16,0,0"/>

                        <StackPanel Grid.Row="2" Grid.Column="0" Spacing="4" Margin="0,16,12,0">
                            <TextBlock Text="Tracing Endpoint"/>
                            <TextBox x:Name="TracingEndpointBox" PlaceholderText="https://tracing.example.com"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Background Jobs Settings -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1" CornerRadius="8" Padding="24">
                <StackPanel Spacing="16">
                    <TextBlock Text="Background Jobs" FontSize="18" FontWeight="SemiBold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <CheckBox x:Name="EnableBackgroundJobsCheck" Grid.Row="0" Grid.Column="0" 
                                  Content="Enable background jobs" Margin="0,0,12,0"/>

                        <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4" Margin="12,0,0,0">
                            <TextBlock Text="Heartbeat Interval (minutes)"/>
                            <NumberBox x:Name="HeartbeatIntervalBox" PlaceholderText="5" 
                                       Minimum="1" Maximum="60"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4" Margin="0,16,12,0">
                            <TextBlock Text="Cleanup Interval (minutes)"/>
                            <NumberBox x:Name="CleanupIntervalBox" PlaceholderText="60" 
                                       Minimum="1" Maximum="1440"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4" Margin="12,16,0,0">
                            <TextBlock Text="Backup Interval (minutes)"/>
                            <NumberBox x:Name="BackupIntervalBox" PlaceholderText="240" 
                                       Minimum="1" Maximum="1440"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Performance Settings -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1" CornerRadius="8" Padding="24">
                <StackPanel Spacing="16">
                    <TextBlock Text="Performance Settings" FontSize="18" FontWeight="SemiBold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4" Margin="0,0,12,0">
                            <TextBlock Text="Database Connection Pool Size"/>
                            <NumberBox x:Name="ConnectionPoolSizeBox" PlaceholderText="50" 
                                       Minimum="10" Maximum="1000"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4" Margin="12,0,0,0">
                            <TextBlock Text="Cache Expiration (minutes)"/>
                            <NumberBox x:Name="CacheExpirationBox" PlaceholderText="15" 
                                       Minimum="1" Maximum="60"/>
                        </StackPanel>

                        <CheckBox x:Name="EnableResponseCompressionCheck" Grid.Row="1" Grid.Column="0" 
                                  Content="Enable response compression" Margin="0,16,12,0"/>

                        <CheckBox x:Name="EnableResponseCachingCheck" Grid.Row="1" Grid.Column="1" 
                                  Content="Enable response caching" Margin="12,16,0,0"/>

                        <StackPanel Grid.Row="2" Grid.Column="0" Spacing="4" Margin="0,16,12,0">
                            <TextBlock Text="Max Concurrent Requests"/>
                            <NumberBox x:Name="MaxConcurrentRequestsBox" PlaceholderText="1000" 
                                       Minimum="100" Maximum="10000"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Actions -->
            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right">
                <Button Content="Reset to Defaults"/>
                <Button Content="Save Changes" Style="{StaticResource AccentButtonStyle}"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

