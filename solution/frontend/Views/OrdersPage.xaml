<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="MagiDesk.Frontend.Views.OrdersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:MagiDesk.Frontend.ViewModels"
    xmlns:converters="using:MagiDesk.Frontend.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Professional Styles -->
        <Style x:Key="PageTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="PageSubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,24"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefault}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefault}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
            <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="MinWidth" Value="200"/>
        </Style>

        <Style x:Key="MetricTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="MetricValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
            <Setter Property="Foreground" Value="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource ControlFillColorDefaultBrush}"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="AlertCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource SystemFillColorCautionBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="StatusCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefault}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ProfessionalComboBoxStyle" TargetType="ComboBox">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="MinWidth" Value="140"/>
        </Style>

        <Style x:Key="ProfessionalDatePickerStyle" TargetType="DatePicker">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="MinWidth" Value="140"/>
        </Style>

        <Style x:Key="TrendUpStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{ThemeResource SystemFillColorSuccessBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="TrendDownStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{ThemeResource SystemFillColorCriticalBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Page.Resources>

    <ScrollViewer Padding="24">
        <StackPanel Spacing="24">
            <!-- Error InfoBar for Analytics -->
            <InfoBar x:Name="AnalyticsErrorBar"
                     IsOpen="False"
                     Severity="Error"
                     Title="Analytics Error"
                     Message=""/>

            <!-- Header Section -->
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE8F5;" FontSize="32" Foreground="{ThemeResource AccentFillColorDefaultBrush}" VerticalAlignment="Center"/>
                    <TextBlock Text="Orders Analytics &amp; Management" Style="{StaticResource PageTitleStyle}"/>
                </StackPanel>
                <TextBlock Text="Comprehensive reporting, analytics, and real-time status monitoring for management oversight" Style="{StaticResource PageSubtitleStyle}"/>
            </StackPanel>

            <!-- Critical Alerts -->
            <Border Style="{StaticResource AlertCardStyle}">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE7BA;" FontSize="20" Foreground="White" VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Critical Alerts" FontSize="16" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="AlertText" Text="No critical issues detected" FontSize="14" Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Key Performance Indicators -->
            <StackPanel>
                <TextBlock Text="Key Performance Indicators" FontSize="20" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Margin="0,0,0,16"/>
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <Border Style="{StaticResource MetricCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Orders Today" Style="{StaticResource MetricTitleStyle}"/>
                            <TextBlock x:Name="OrdersTodayText" Text="0" Style="{StaticResource MetricValueStyle}"/>
                            <TextBlock x:Name="OrdersTodayTrend" Text="↗ +12%" Style="{StaticResource TrendUpStyle}" FontSize="12" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource MetricCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Revenue Today" Style="{StaticResource MetricTitleStyle}"/>
                            <TextBlock x:Name="RevenueTodayText" Text="$0.00" Style="{StaticResource MetricValueStyle}"/>
                            <TextBlock x:Name="RevenueTodayTrend" Text="↗ +8%" Style="{StaticResource TrendUpStyle}" FontSize="12" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource MetricCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Avg Order Value" Style="{StaticResource MetricTitleStyle}"/>
                            <TextBlock x:Name="AvgOrderValueText" Text="$0.00" Style="{StaticResource MetricValueStyle}"/>
                            <TextBlock x:Name="AvgOrderValueTrend" Text="↗ +5%" Style="{StaticResource TrendUpStyle}" FontSize="12" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource MetricCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Completion Rate" Style="{StaticResource MetricTitleStyle}"/>
                            <TextBlock x:Name="CompletionRateText" Text="0%" Style="{StaticResource MetricValueStyle}"/>
                            <TextBlock x:Name="CompletionRateTrend" Text="↗ +3%" Style="{StaticResource TrendUpStyle}" FontSize="12" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- Real-time Status Monitoring -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE7C4;" FontSize="20" Foreground="{ThemeResource TextFillColorPrimaryBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="Real-time Status Monitoring" FontSize="20" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Pending Orders -->
                        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource StatusCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Pending Orders" FontSize="16" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                <TextBlock x:Name="PendingOrdersText" Text="0" FontSize="32" FontWeight="Bold" Foreground="{ThemeResource SystemFillColorCautionBrush}" Margin="0,8,0,0"/>
                                <TextBlock Text="Awaiting processing" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- In Progress -->
                        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource StatusCardStyle}">
                            <StackPanel>
                                <TextBlock Text="In Progress" FontSize="16" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                <TextBlock x:Name="InProgressText" Text="0" FontSize="32" FontWeight="Bold" Foreground="{ThemeResource SystemFillColorAttentionBrush}" Margin="0,8,0,0"/>
                                <TextBlock Text="Being prepared" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Ready for Delivery -->
                        <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource StatusCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Ready for Delivery" FontSize="16" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                <TextBlock x:Name="ReadyForDeliveryText" Text="0" FontSize="32" FontWeight="Bold" Foreground="{ThemeResource SystemFillColorSuccessBrush}" Margin="0,8,0,0"/>
                                <TextBlock Text="Awaiting pickup" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Completed -->
                        <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource StatusCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Completed Today" FontSize="16" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                <TextBlock x:Name="CompletedTodayText" Text="0" FontSize="32" FontWeight="Bold" Foreground="{ThemeResource AccentFillColorDefaultBrush}" Margin="0,8,0,0"/>
                                <TextBlock Text="Successfully delivered" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Performance Metrics Row -->
                        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource StatusCardStyle}" Margin="0,12,8,0">
                            <StackPanel>
                                <TextBlock Text="Performance Metrics" FontSize="16" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Margin="0,0,0,12"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Avg Prep Time" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock x:Name="AvgPrepTimeText" Text="0m" FontSize="18" FontWeight="Bold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Peak Hour" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock x:Name="PeakHourText" Text="--:--" FontSize="18" FontWeight="Bold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Efficiency Score" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock x:Name="EfficiencyScoreText" Text="0%" FontSize="18" FontWeight="Bold" Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Quick Actions -->
                        <Border Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Style="{StaticResource StatusCardStyle}" Margin="8,12,0,0">
                            <StackPanel>
                                <TextBlock Text="Quick Actions" FontSize="16" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Margin="0,0,0,12"/>
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <Button Style="{StaticResource PrimaryButtonStyle}" Click="ExportReport_Click">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon Glyph="&#xE792;" FontSize="16"/>
                                                <TextBlock Text="Export Report"/>
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                    <Button Style="{StaticResource SecondaryButtonStyle}" Click="RefreshData_Click">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                                                <TextBlock Text="Refresh Data"/>
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Analytics &amp; Reporting -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE8F5;" FontSize="20" Foreground="{ThemeResource TextFillColorPrimaryBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="Analytics &amp; Reporting" FontSize="20" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Date Range Filter -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,16,0">
                            <TextBlock Text="Date Range" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <DatePicker x:Name="FromDatePicker" Style="{StaticResource ProfessionalDatePickerStyle}" DateChanged="FromDatePicker_DateChanged"/>
                                <TextBlock Text="to" VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <DatePicker x:Name="ToDatePicker" Style="{StaticResource ProfessionalDatePickerStyle}" DateChanged="ToDatePicker_DateChanged"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Report Type Filter -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="16,0,0,0">
                            <TextBlock Text="Report Type" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <ComboBox x:Name="ReportTypeCombo" Style="{StaticResource ProfessionalComboBoxStyle}" SelectionChanged="ReportTypeCombo_SelectionChanged">
                                <ComboBoxItem Content="Daily Summary" IsSelected="True"/>
                                <ComboBoxItem Content="Weekly Trends"/>
                                <ComboBoxItem Content="Monthly Analysis"/>
                                <ComboBoxItem Content="Performance Metrics"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Analytics Summary -->
                        <Border Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource StatusCardStyle}" Margin="0,16,0,0">
                            <StackPanel>
                                <TextBlock Text="Analytics Summary" FontSize="16" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Margin="0,0,0,12"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Total Orders" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock x:Name="TotalOrdersText" Text="0" FontSize="18" FontWeight="Bold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Total Revenue" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock x:Name="TotalRevenueText" Text="$0.00" FontSize="18" FontWeight="Bold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Avg Order Time" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock x:Name="AvgOrderTimeText" Text="0m" FontSize="18" FontWeight="Bold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="3">
                                        <TextBlock Text="Customer Satisfaction" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock x:Name="CustomerSatisfactionText" Text="0%" FontSize="18" FontWeight="Bold" Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="4">
                                        <TextBlock Text="Return Rate" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock x:Name="ReturnRateText" Text="0%" FontSize="18" FontWeight="Bold" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Status Summary -->
                        <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource StatusCardStyle}" Margin="0,16,8,0">
                            <StackPanel>
                                <TextBlock Text="Order Status Summary" FontSize="16" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Margin="0,0,0,12"/>
                                <ListView x:Name="StatusSummaryList" SelectionMode="None" Background="Transparent" BorderThickness="0">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Status}"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Count}" Margin="12,0,12,0"/>
                                                <TextBlock Grid.Column="2" Text="{Binding Percentage, Converter={StaticResource PercentageConverter}}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </Border>

                        <!-- Trends -->
                        <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource StatusCardStyle}" Margin="8,16,0,0">
                            <StackPanel>
                                <TextBlock Text="Order Trends" FontSize="16" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Margin="0,0,0,12"/>
                                <ListView x:Name="TrendsList" SelectionMode="None" Background="Transparent" BorderThickness="0" Height="220">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Date, Converter={StaticResource DateTimeConverter}}"/>
                                                <TextBlock Grid.Column="1" Text="{Binding OrderCount}" HorizontalAlignment="Right"/>
                                                <TextBlock Grid.Column="2" Text="{Binding Revenue, Converter={StaticResource CurrencyConverter}}" HorizontalAlignment="Right"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Recent Activity -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE8F5;" FontSize="20" Foreground="{ThemeResource TextFillColorPrimaryBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="Recent Activity &amp; Alerts" FontSize="20" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                    
                    <ListView x:Name="RecentActivityList" Height="300" Background="Transparent" BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{ThemeResource CardBackgroundFillColorDefault}" 
                                        CornerRadius="8" Padding="16" Margin="0,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <FontIcon Grid.Column="0" Glyph="&#xE8F5;" FontSize="16" 
                                                  Foreground="{ThemeResource AccentFillColorDefaultBrush}" 
                                                  VerticalAlignment="Center" Margin="0,0,12,0"/>
                                        
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="SemiBold" 
                                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                            <TextBlock Text="{Binding Description}" FontSize="12" 
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                                       TextWrapping="Wrap" Margin="0,4,0,0"/>
                                        </StackPanel>
                                        
                                        <TextBlock Grid.Column="2" Text="{Binding Timestamp}" FontSize="12" 
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>