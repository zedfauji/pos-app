<Page
    x:Class="MagiDesk.Frontend.Views.OrdersPage"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:MagiDesk.Frontend.ViewModels"
    xmlns:converters="using:MagiDesk.Frontend.Converters"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Converters -->
        <converters:StringToBrushConverter x:Key="StringToBrushConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Modern Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FF8C00"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#D13438"/>
        <SolidColorBrush x:Key="InfoBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="CardBrush" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#404040"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#CCCCCC"/>

        <!-- Modern Card Style -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <!-- Status Badge Style -->
        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="WarningButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Header Text Style -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        </Style>

        <!-- Label Text Style -->
        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        </Style>

        <!-- Value Text Style -->
        <Style x:Key="ValueTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource SurfaceBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBrush}" Padding="24,16" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Order Management" FontSize="24" FontWeight="Bold" 
                             Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Manage orders, track delivery, and process payments" FontSize="14" 
                             Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                    <NumberBox x:Name="OrderIdBox" Width="140" Minimum="1" SmallChange="1" 
                              PlaceholderText="Enter Order ID" Margin="0,0,8,0"/>
                    <Button Content="Load Order" Style="{StaticResource PrimaryButtonStyle}"
                            Click="LoadOrderId_Click"/>
                    <Button Content="Refresh" Style="{StaticResource SecondaryButtonStyle}"
                            Click="Refresh_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Order Summary Cards -->
        <ScrollViewer Grid.Row="1" HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollMode="Disabled" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" Spacing="8" Padding="8,0">
                <!-- Order ID Card -->
                <Border Style="{StaticResource ModernCardStyle}" MinWidth="200">
                    <StackPanel>
                        <TextBlock Text="Order ID" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding OrderId}" 
                                 FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"
                                 Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Current Order" FontSize="12" HorizontalAlignment="Center"
                                 Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Status Card -->
                <Border Style="{StaticResource ModernCardStyle}" MinWidth="200">
                    <StackPanel>
                        <TextBlock Text="Status" FontSize="24" HorizontalAlignment="Center"/>
                        <Border Background="{Binding StatusColor, Converter={StaticResource StringToBrushConverter}}"
                                CornerRadius="12" Padding="12,6" Margin="0,8,0,0">
                            <TextBlock Text="{Binding Status}" 
                                     FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"
                                     Foreground="White"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Delivery Status Card -->
                <Border Style="{StaticResource ModernCardStyle}" MinWidth="200">
                    <StackPanel>
                        <TextBlock Text="Delivery" FontSize="24" HorizontalAlignment="Center"/>
                        <Border Background="{Binding DeliveryStatusColor, Converter={StaticResource StringToBrushConverter}}"
                                CornerRadius="12" Padding="12,6" Margin="0,8,0,0">
                            <TextBlock Text="{Binding DeliveryStatus}" 
                                     FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"
                                     Foreground="White"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Total Amount Card -->
                <Border Style="{StaticResource ModernCardStyle}" MinWidth="200">
                    <StackPanel>
                        <TextBlock Text="Total" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalFormatted}" 
                                 FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"
                                 Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Order Total" FontSize="12" HorizontalAlignment="Center"
                                 Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Items Count Card -->
                <Border Style="{StaticResource ModernCardStyle}" MinWidth="200">
                    <StackPanel>
                        <TextBlock Text="Items" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding ItemsCount}" 
                                 FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"
                                 Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Total Items" FontSize="12" HorizontalAlignment="Center"
                                 Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="{StaticResource CardBrush}" Padding="16" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                <Button Content="Mark Waiting" Style="{StaticResource WarningButtonStyle}"
                        Click="MarkWaiting_Click" IsEnabled="{Binding CanMarkWaiting}"/>
                <Button Content="Mark Delivered" Style="{StaticResource SuccessButtonStyle}"
                        Click="MarkDelivered_Click" IsEnabled="{Binding CanMarkDelivered}"/>
                <Button Content="Close Order" Style="{StaticResource SecondaryButtonStyle}"
                        Click="CloseOrder_Click" IsEnabled="{Binding CanCloseOrder}"/>
                <Button Content="Process Payment" Style="{StaticResource PrimaryButtonStyle}"
                        Click="Checkout_Click" IsEnabled="{Binding CanProcessPayment}"/>
                <Button Content="Load Logs" Style="{StaticResource SecondaryButtonStyle}"
                        Click="LoadLogs_Click"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Items List -->
            <Border Grid.Column="0" Style="{StaticResource ModernCardStyle}" Margin="0,0,4,0">
                <StackPanel>
                    <TextBlock Text="Order Items" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,16"/>
                    
                    <ListView x:Name="ItemsGrid" ItemsSource="{Binding Items}" SelectionMode="None"
                              Background="Transparent" BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource SurfaceBrush}" 
                                        CornerRadius="8" Padding="16" Margin="0,4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Item Name and Modifiers -->
                                        <StackPanel Grid.Row="0" Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold"
                                                     Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding ModifiersText}" FontSize="12"
                                                     Foreground="{StaticResource TextSecondaryBrush}" 
                                                     Visibility="{Binding ModifiersText, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </StackPanel>

                                        <!-- Item Actions -->
                                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                            <Button Content="-" Click="QtyMinus_Click" Width="32" Height="32"
                                                    Style="{StaticResource SecondaryButtonStyle}" FontSize="16"/>
                                            <TextBlock Text="{Binding Quantity}" Width="40" TextAlignment="Center" 
                                                     VerticalAlignment="Center" FontSize="16" FontWeight="SemiBold"
                                                     Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <Button Content="+" Click="QtyPlus_Click" Width="32" Height="32"
                                                    Style="{StaticResource SecondaryButtonStyle}" FontSize="16"/>
                                            <Button Content="Delete" Click="Cancel_Click" Width="60" Height="32"
                                                    Style="{StaticResource SecondaryButtonStyle}" FontSize="12"/>
                                        </StackPanel>

                                        <!-- Price and Delivery Info -->
                                        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,8,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Unit Price" Style="{StaticResource LabelTextStyle}"/>
                                                <TextBlock Text="{Binding UnitPriceFormatted}" Style="{StaticResource ValueTextStyle}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="Quantity" Style="{StaticResource LabelTextStyle}"/>
                                                <TextBlock Text="{Binding Quantity}" Style="{StaticResource ValueTextStyle}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="Delivered" Style="{StaticResource LabelTextStyle}"/>
                                                <TextBlock Text="{Binding DeliveredQuantity}" Style="{StaticResource ValueTextStyle}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="3">
                                                <TextBlock Text="Total" Style="{StaticResource LabelTextStyle}"/>
                                                <TextBlock Text="{Binding LineTotalFormatted}" Style="{StaticResource ValueTextStyle}" FontWeight="SemiBold"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="4" Orientation="Horizontal" Spacing="4">
                                                <Button Content="-" Click="DeliveredMinus_Click" Width="24" Height="24"
                                                        Style="{StaticResource SecondaryButtonStyle}" FontSize="12"/>
                                                <TextBlock Text="{Binding DeliveredQuantity}" Width="32" TextAlignment="Center" 
                                                         VerticalAlignment="Center" FontSize="12"/>
                                                <Button Content="+" Click="DeliveredPlus_Click" Width="24" Height="24"
                                                        Style="{StaticResource SecondaryButtonStyle}" FontSize="12"/>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Delivery Status -->
                                        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                                                Background="{Binding DeliveryStatusColor, Converter={StaticResource StringToBrushConverter}}"
                                                CornerRadius="6" Padding="8,4" Margin="0,8,0,0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" Text="{Binding DeliveryStatus}" 
                                                         FontSize="12" FontWeight="SemiBold" Foreground="White"/>
                                                <Button Grid.Column="1" Content="Mark Delivered" Click="MarkItemDelivered_Click" 
                                                        IsEnabled="{Binding CanMarkDelivered}" FontSize="10" Padding="8,2"
                                                        Background="White" Foreground="{Binding DeliveryStatusColor, Converter={StaticResource StringToBrushConverter}}"/>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Audit Logs -->
            <Border Grid.Column="1" Style="{StaticResource ModernCardStyle}" Margin="4,0,0,0">
                <StackPanel>
                    <TextBlock Text="Audit Logs" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,16"/>
                    
                    <ListView ItemsSource="{Binding Logs}" Height="400" Background="Transparent" BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource SurfaceBrush}" 
                                        CornerRadius="6" Padding="12" Margin="0,2">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Action}" FontSize="14" FontWeight="SemiBold"
                                                 Foreground="{StaticResource TextPrimaryBrush}" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding CreatedAtFormatted}" FontSize="12" 
                                                 Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Financial Summary -->
        <Border Grid.Row="4" Background="{StaticResource CardBrush}" Padding="20" Margin="0,8,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Subtotal" Style="{StaticResource LabelTextStyle}"/>
                    <TextBlock Text="{Binding SubtotalFormatted}" Style="{StaticResource ValueTextStyle}" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Discount" Style="{StaticResource LabelTextStyle}"/>
                    <TextBlock Text="{Binding DiscountTotalFormatted}" Style="{StaticResource ValueTextStyle}" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Tax" Style="{StaticResource LabelTextStyle}"/>
                    <TextBlock Text="{Binding TaxTotalFormatted}" Style="{StaticResource ValueTextStyle}" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Grid.Column="3">
                    <TextBlock Text="Total" Style="{StaticResource LabelTextStyle}"/>
                    <TextBlock Text="{Binding TotalFormatted}" Style="{StaticResource ValueTextStyle}" FontWeight="Bold" FontSize="16"/>
                </StackPanel>

                <StackPanel Grid.Column="4">
                    <TextBlock Text="Profit Margin" Style="{StaticResource LabelTextStyle}"/>
                    <TextBlock Text="{Binding ProfitMarginFormatted}" Style="{StaticResource ValueTextStyle}" 
                             FontWeight="SemiBold" Foreground="{StaticResource SuccessBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="5" Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressRing IsActive="True" Width="40" Height="40" 
                            Foreground="{StaticResource PrimaryBrush}"/>
                <TextBlock Text="Loading order data..." Foreground="White" 
                         Margin="0,16,0,0" FontSize="16"/>
            </StackPanel>
        </Grid>

        <!-- Error Message -->
        <InfoBar Grid.Row="4" x:Name="ErrorInfoBar"
               IsOpen="{Binding HasError}"
               Message="{Binding ErrorMessage}"
               Severity="Error"
               Margin="8"/>
    </Grid>
</Page>