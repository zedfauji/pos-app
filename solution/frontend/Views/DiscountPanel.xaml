<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MagiDesk.Frontend.Views.DiscountPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MagiDesk.Frontend.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="DiscountChipStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource SystemFillColorSuccessBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource SystemFillColorSuccessBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,4,4"/>
        </Style>

        <Style x:Key="DiscountButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
            <Setter Property="Foreground" Value="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </UserControl.Resources>

    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE7BA;" FontSize="16" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                    <TextBlock Text="Discounts &amp; Promotions" 
                               FontSize="16" 
                               FontWeight="SemiBold"/>
                    <Border x:Name="DiscountCountBadge"
                            Background="{ThemeResource SystemFillColorSuccessBrush}"
                            CornerRadius="8"
                            Padding="6,2"
                            Visibility="Collapsed">
                        <TextBlock x:Name="DiscountCountText" 
                                   Text="0" 
                                   FontSize="10" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </Border>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Content="Browse All" 
                            Click="BrowseAll_Click"
                            Style="{StaticResource DiscountButtonStyle}"/>
                    <Button x:Name="AutoApplyButton"
                            Content="Auto Apply" 
                            Click="AutoApply_Click"
                            IsEnabled="False"/>
                </StackPanel>
            </Grid>

            <!-- Auto-Applied Discounts -->
            <StackPanel Grid.Row="1" x:Name="AutoDiscountsPanel" Visibility="Collapsed" Margin="0,0,0,8">
                <TextBlock Text="Automatically Applied:" 
                           FontSize="12" 
                           FontWeight="SemiBold" 
                           Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                           Margin="0,0,0,4"/>
                <ItemsRepeater x:Name="AutoDiscountsRepeater">
                    <ItemsRepeater.Layout>
                        <StackLayout Orientation="Horizontal" Spacing="4"/>
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource DiscountChipStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon Glyph="&#xE73E;" FontSize="10" Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="10" 
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                                    <TextBlock Text="{Binding DiscountPercentage}" 
                                               FontSize="10"
                                               FontWeight="Bold"
                                               Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </StackPanel>

            <!-- Manual Discounts -->
            <StackPanel Grid.Row="2" x:Name="ManualDiscountsPanel" Visibility="Collapsed" Margin="0,0,0,8">
                <TextBlock Text="Applied Discounts:" 
                           FontSize="12" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,4"/>
                <ItemsRepeater x:Name="ManualDiscountsRepeater">
                    <ItemsRepeater.Layout>
                        <StackLayout Orientation="Vertical" Spacing="4"/>
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Description}" 
                                                   FontSize="10" 
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="{Binding DiscountAmount}" 
                                                   FontSize="12" 
                                                   FontWeight="Bold"
                                                   Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                                        <Button Content="&#xE711;" 
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="10"
                                                Width="20" 
                                                Height="20"
                                                Padding="0"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Click="RemoveDiscount_Click"
                                                Tag="{Binding Id}"
                                                ToolTipService.ToolTip="Remove discount"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </StackPanel>

            <!-- Summary -->
            <Border Grid.Row="3" 
                    x:Name="SummaryPanel"
                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                    CornerRadius="6"
                    Padding="12,8"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock x:Name="TotalDiscountsText" 
                                   Text="Total Discounts Applied: 0" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                        <TextBlock x:Name="TotalSavingsText" 
                                   Text="You saved: $0.00" 
                                   FontSize="10"
                                   Foreground="{ThemeResource TextOnAccentFillColorSecondaryBrush}"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1"
                            Content="Clear All" 
                            Click="ClearAll_Click"
                            Background="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                            Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                            BorderThickness="0"
                            CornerRadius="4"
                            Padding="8,4"
                            FontSize="10"/>
                </Grid>
            </Border>

            <!-- Empty State -->
            <StackPanel Grid.Row="1" 
                        x:Name="EmptyStatePanel"
                        HorizontalAlignment="Center" 
                        Spacing="8"
                        Margin="0,16">
                <FontIcon Glyph="&#xE7BA;" 
                          FontSize="24" 
                          Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                <TextBlock Text="No discounts available" 
                           FontSize="12" 
                           HorizontalAlignment="Center"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <TextBlock Text="Browse available promotions" 
                           FontSize="10" 
                           HorizontalAlignment="Center"
                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
