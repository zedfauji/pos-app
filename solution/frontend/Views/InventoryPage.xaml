<Page
    x:Class="MagiDesk.Frontend.Views.InventoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="Inventory" FontSize="20" FontWeight="SemiBold"/>
            <Button Content="Sync Product Names" Click="Sync_Click"/>
            <Button Content="Refresh" Click="Refresh_Click"/>
            <Button Content="Job History" Click="JobHistory_Click"/>
            <TextBox x:Name="SearchBox" Width="260" PlaceholderText="Search clave or product name" TextChanged="SearchBox_TextChanged"/>
        </StackPanel>

        <!-- CRITICAL FIX: Replace CommunityToolkit DataGrid with native WinUI 3 ListView -->
        <!-- CommunityToolkit DataGrid causes COM exceptions in WinUI 3 Desktop Apps -->
        <ListView Grid.Row="1"
                  x:Name="InventoryGrid"
                  ItemsSource="{Binding InventoryDisplayFiltered}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- clave -->
                        <TextBlock Grid.Column="0" Text="{Binding clave}" VerticalAlignment="Center"/>
                        
                        <!-- productname -->
                        <TextBlock Grid.Column="1" Text="{Binding productname}" VerticalAlignment="Center"/>
                        
                        <!-- entradas -->
                        <TextBlock Grid.Column="2" Text="{Binding entradas}" VerticalAlignment="Center"/>
                        
                        <!-- salidas -->
                        <TextBlock Grid.Column="3" Text="{Binding salidas}" VerticalAlignment="Center"/>
                        
                        <!-- saldo -->
                        <TextBlock Grid.Column="4" Text="{Binding saldo}" VerticalAlignment="Center"/>
                        
                        <!-- migrated_at -->
                        <TextBlock Grid.Column="5" Text="{Binding migrated_at}" VerticalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
