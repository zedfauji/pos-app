<Page
    x:Class="MagiDesk.Frontend.Views.InventoryCrudPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,16">
            <TextBlock Text="Inventory Management" FontSize="24" FontWeight="SemiBold"/>
            <Button Content="Add Item" Click="AddItem_Click" HorizontalAlignment="Right"/>
            <Button Content="Import" Click="Import_Click"/>
            <Button Content="Export" Click="Export_Click"/>
            <Button Content="Refresh" Click="Refresh_Click"/>
        </StackPanel>

        <!-- Filters -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <ComboBox Grid.Column="0" x:Name="CategoryFilter" PlaceholderText="All Categories" SelectionChanged="CategoryFilter_SelectionChanged" Margin="0,0,8,0"/>
            <ComboBox Grid.Column="1" x:Name="VendorFilter" PlaceholderText="All Vendors" SelectionChanged="VendorFilter_SelectionChanged" Margin="0,0,8,0"/>
            <ComboBox Grid.Column="2" x:Name="StatusFilter" PlaceholderText="All Status" SelectionChanged="StatusFilter_SelectionChanged" Margin="0,0,8,0">
                <ComboBoxItem Content="Active" Tag="Active"/>
                <ComboBoxItem Content="Inactive" Tag="Inactive"/>
                <ComboBoxItem Content="Low Stock" Tag="LowStock"/>
            </ComboBox>
            <TextBox Grid.Column="3" x:Name="SearchBox" PlaceholderText="Search items..." TextChanged="SearchBox_TextChanged"/>
        </Grid>

        <!-- Inventory Items List -->
        <ListView Grid.Row="2"
                  x:Name="InventoryList"
                  ItemsSource="{x:Bind _vm.Items, Mode=OneWay}"
                  SelectionMode="Single"
                  SelectionChanged="InventoryList_SelectionChanged">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Grid Background="LightGray" Padding="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="SKU" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" Text="Name" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="2" Text="Category" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="3" Text="Stock" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="4" Text="Min Stock" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="5" Text="Unit Cost" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="6" Text="Status" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="7" Text="Actions" FontWeight="SemiBold"/>
                    </Grid>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="{x:Bind Sku}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{x:Bind Name}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                        <TextBlock Grid.Column="2" Text="{x:Bind Category}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="3" Text="{x:Bind Stock}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="4" Text="{x:Bind MinStock}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="5" Text="{x:Bind UnitCost}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        
                        <Border Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                Background="Green" CornerRadius="4" Padding="4,2">
                            <TextBlock Text="Active" FontSize="10" Foreground="White"/>
                        </Border>
                        
                        <StackPanel Grid.Column="7" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                            <Button Content="Edit" Click="EditItem_Click" Tag="{x:Bind Id}" FontSize="10" Padding="4,2"/>
                            <Button Content="Adjust" Click="AdjustStock_Click" Tag="{x:Bind Id}" FontSize="10" Padding="4,2"/>
                            <Button Content="Delete" Click="DeleteItem_Click" Tag="{x:Bind Id}" FontSize="10" Padding="4,2" Background="Red" Foreground="White"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
