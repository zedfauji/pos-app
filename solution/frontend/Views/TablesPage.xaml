<Page
    x:Class="MagiDesk.Frontend.Views.TablesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:MagiDesk.Frontend.Views"
    xmlns:conv="using:MagiDesk.Frontend.Converters"
    mc:Ignorable="d">
    <Page.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <conv:OccupiedToColorConverter x:Key="OccupiedToColorConverter"/>
        <conv:StringEqualsConverter x:Key="StringEqualsConverter"/>
        
        <!-- Easing Functions -->
        <CubicEase x:Key="CubicEase" EasingMode="EaseOut"/>
    </Page.Resources>
    
    <Grid Background="Transparent">
        <!-- Page Header -->
        <StackPanel Style="{StaticResource FluentPageHeaderStyle}">
            <TextBlock Text="Tables" 
                       Style="{StaticResource DisplayTextStyle}"
                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
            <TextBlock Text="Manage and monitor table status" 
                       Style="{StaticResource CaptionTextStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      VerticalScrollMode="Auto"
                      Padding="24"
                      Margin="0,16,0,0">
            <StackPanel Spacing="32">
                <!-- Fluent Top Bar -->
                <Border Style="{StaticResource FluentCardStyle}">
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Left Side: Controls -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="32">
                            <!-- Floor Selector -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Floor" 
                                           Style="{StaticResource BodyTextStyle}"
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                <ComboBox x:Name="FloorCombo" 
                                          Width="200" 
                                          ItemsSource="{Binding Floors}"
                                          DisplayMemberPath="FloorName"
                                          SelectedItem="{Binding SelectedFloor, Mode=TwoWay}"
                                          SelectionChanged="FloorCombo_SelectionChanged"
                                          Style="{StaticResource FluentComboBoxStyle}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock Text="{Binding FloorName}"/>
                                                <Border Background="{ThemeResource SystemFillColorAttentionBackground}"
                                                        CornerRadius="4"
                                                        Padding="4,2"
                                                        Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibility}}">
                                                    <TextBlock Text="Default" 
                                                               FontSize="10"
                                                               Foreground="White"
                                                               FontWeight="SemiBold"/>
                                                </Border>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- Filter Control -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Filter Tables" 
                                           Style="{StaticResource BodyTextStyle}"
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                <ComboBox x:Name="FilterCombo" 
                                          Width="200" 
                                          SelectionChanged="FilterCombo_SelectionChanged"
                                          Style="{StaticResource FluentComboBoxStyle}">
                                    <ComboBoxItem Content="All Tables"/>
                                    <ComboBoxItem Content="Available Only"/>
                                    <ComboBoxItem Content="Occupied Only"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- Live Updates Toggle -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Live Updates" 
                                           Style="{StaticResource BodyTextStyle}"
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                <ToggleSwitch x:Name="LiveToggle" 
                                              Toggled="LiveToggle_Toggled"
                                              OnContent="Enabled"
                                              OffContent="Disabled"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Right Side: Status Info -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                            <!-- Source Badge -->
                            <Border Style="{StaticResource FluentStatusBadgeStyle}">
                                <TextBlock x:Name="SourceText" 
                                           Foreground="White" 
                                           FontSize="12" FontWeight="SemiBold"/>
                            </Border>
                            
                            <!-- Counts Badge -->
                            <Border Style="{StaticResource FluentStatusBadgeStyle}">
                                <TextBlock x:Name="CountsText" 
                                           Foreground="White" 
                                           FontSize="12" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Legend -->
                <Border Background="{StaticResource AcrylicCardBrush}" 
                        CornerRadius="8" 
                        Padding="16" 
                        HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="24">
                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                            <Border Width="12" Height="12" CornerRadius="6"
                                    Background="{ThemeResource SystemFillColorSuccessBrush}"/>
                            <TextBlock Text="Available" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                            <Border Width="12" Height="12" CornerRadius="6"
                                    Background="{ThemeResource SystemFillColorCriticalBrush}"/>
                            <TextBlock Text="Occupied" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Billiard Tables Section -->
                <Border Background="{StaticResource AcrylicCardBrush}" 
                        CornerRadius="16" 
                        Padding="24">
                    
                    <StackPanel Spacing="20">
                        <!-- Section Header -->
                        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE7F7;" FontSize="24" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock Text="Billiard Tables" 
                                       FontSize="24" FontWeight="SemiBold" 
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            <Border Style="{StaticResource FluentStatusBadgeStyle}" Margin="12,0,0,0">
                                <TextBlock Text="{Binding FilteredBilliardTables.Count}" 
                                           Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                        
                        <!-- Tables Grid -->
                        <GridView ItemsSource="{Binding FilteredBilliardTables}" 
                                  IsItemClickEnabled="False" 
                                  SelectionMode="None"
                                  HorizontalAlignment="Stretch">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid Orientation="Horizontal" 
                                                   ItemWidth="256" 
                                                   ItemHeight="212"
                                                   HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                            <GridView.ItemContainerStyle>
                                <Style TargetType="GridViewItem">
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </GridView.ItemContainerStyle>
                            <GridView.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource FluentCardStyle}" 
                                            Width="240" Height="180"
                                            RenderTransformOrigin="0.5,0.5">
                                        <Border.RenderTransform>
                                            <CompositeTransform/>
                                        </Border.RenderTransform>
                                        <Border.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="Start Session" Click="StartMenu_Click" 
                                                                Visibility="{Binding IsAvailable, Converter={StaticResource BoolToVisibility}}"
                                                                Icon="Play"/>
                                                <MenuFlyoutItem Text="Add Items" Click="AddItemsMenu_Click" 
                                                                Visibility="{Binding Occupied, Converter={StaticResource BoolToVisibility}}"
                                                                Icon="Add"/>
                                                <MenuFlyoutItem Text="Move Table" Click="MoveMenu_Click" 
                                                                Visibility="{Binding Occupied, Converter={StaticResource BoolToVisibility}}"
                                                                Icon="Forward"/>
                                                <MenuFlyoutItem Text="Stop Session" Click="StopMenu_Click" 
                                                                Visibility="{Binding Occupied, Converter={StaticResource BoolToVisibility}}"
                                                                Icon="Cancel"/>
                                                <MenuFlyoutSeparator/>
                                                <MenuFlyoutItem Text="Table Status" Click="TableStatusMenu_Click" 
                                                                Visibility="{Binding Occupied, Converter={StaticResource BoolToVisibility}}"
                                                                Icon="Help"/>
                                                <MenuFlyoutSeparator/>
                                                <MenuFlyoutItem Text="Run Diagnostics" Click="DiagnosticsMenu_Click" 
                                                                Icon="Repair"/>
                                                <MenuFlyoutSeparator/>
                                                <MenuFlyoutItem Text="Set Threshold" Click="SetThreshold_Click" Icon="Clock"/>
                                                <MenuFlyoutItem Text="Clear Threshold" Click="ClearThreshold_Click" Icon="Clear"/>
                                            </MenuFlyout>
                                        </Border.ContextFlyout>
                                        <ToolTipService.ToolTip>
                                            <ToolTip>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Label}" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding StatusText}" Opacity="0.8"/>
                                                    <TextBlock Text="{Binding ItemsSummary}" Opacity="0.8" TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                        
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Header with Status -->
                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                                <Border Width="12" Height="12" CornerRadius="6" Margin="0,0,8,0"
                                                        Background="{Binding Occupied, Converter={StaticResource OccupiedToColorConverter}}">
                                                    <TextBlock Text="{Binding Label}" 
                                                               FontSize="16" FontWeight="SemiBold" 
                                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                            </StackPanel>
                                            
                                            <!-- Table Visual -->
                                            <Grid Grid.Row="1" Margin="0,0,0,12">
                                                <Border Background="{Binding BackgroundBrush}" 
                                                        CornerRadius="8" 
                                                        BorderBrush="#0a2a16" 
                                                        BorderThickness="3"
                                                        Width="200" Height="110"
                                                        HorizontalAlignment="Center">
                                                    <!-- Billiard Table Pockets -->
                                                    <Grid>
                                                        <Ellipse Fill="#0a2a16" Width="12" Height="12" 
                                                                 HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2"/>
                                                        <Ellipse Fill="#0a2a16" Width="12" Height="12" 
                                                                 HorizontalAlignment="Right" VerticalAlignment="Top" Margin="2"/>
                                                        <Ellipse Fill="#0a2a16" Width="12" Height="12" 
                                                                 HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="2"/>
                                                        <Ellipse Fill="#0a2a16" Width="12" Height="12" 
                                                                 HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="2"/>
                                                        <Ellipse Fill="#0a2a16" Width="12" Height="12" 
                                                                 HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                                        <Ellipse Fill="#0a2a16" Width="12" Height="12" 
                                                                 HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                                                        
                                                        <!-- Timer Chip -->
                                                        <Border CornerRadius="10" Padding="6,2" 
                                                                Background="{Binding ChipBackground}" 
                                                                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="6"
                                                                Visibility="{Binding HasTimer, Converter={StaticResource BoolToVisibility}}">
                                                            <TextBlock Text="{Binding ElapsedMinutesText}" 
                                                                       Foreground="White" FontSize="10" FontWeight="SemiBold"/>
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                            </Grid>
                                            
                                            <!-- Footer Info -->
                                            <StackPanel Grid.Row="2" Spacing="4">
                                                <TextBlock Text="{Binding StatusText}" 
                                                           HorizontalAlignment="Center" 
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                           FontSize="12"/>
                                                <TextBlock Text="{Binding ItemsSummary}" 
                                                           HorizontalAlignment="Center" 
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                           FontSize="11" 
                                                           TextWrapping="Wrap"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxHeight="32"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </StackPanel>
                </Border>
                
                <!-- Bar Tables Section -->
                <Border Background="{StaticResource AcrylicCardBrush}" 
                        CornerRadius="16" 
                        Padding="24">
                    
                    <StackPanel Spacing="20">
                        <!-- Section Header -->
                        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE7F8;" FontSize="24" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock Text="Bar Tables" 
                                       FontSize="24" FontWeight="SemiBold" 
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            <Border Style="{StaticResource FluentStatusBadgeStyle}" Margin="12,0,0,0">
                                <TextBlock Text="{Binding FilteredBarTables.Count}" 
                                           Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                        
                        <!-- Tables Grid -->
                        <GridView ItemsSource="{Binding FilteredBarTables}" 
                                  IsItemClickEnabled="False" 
                                  SelectionMode="None"
                                  HorizontalAlignment="Stretch">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid Orientation="Horizontal" 
                                                   ItemWidth="216" 
                                                   ItemHeight="212"
                                                   HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                            <GridView.ItemContainerStyle>
                                <Style TargetType="GridViewItem">
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </GridView.ItemContainerStyle>
                            <GridView.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource FluentCardStyle}" 
                                            Width="200" Height="180"
                                            RenderTransformOrigin="0.5,0.5">
                                        <Border.RenderTransform>
                                            <CompositeTransform/>
                                        </Border.RenderTransform>
                                        <Border.ContextFlyout>
                                            <MenuFlyout>
                                                <!-- Bar Table Specific Options -->
                                                <MenuFlyoutItem Text="Open Table" Click="OpenTableMenu_Click" 
                                                                Visibility="{Binding IsBarTable, Converter={StaticResource BoolToVisibility}}"
                                                                Icon="Play"/>
                                                <MenuFlyoutItem Text="Add Items" Click="AddItemsMenu_Click" 
                                                                Icon="Add">
                                                    <MenuFlyoutItem.Visibility>
                                                        <Binding Path="IsBarTable">
                                                            <Binding.Converter>
                                                                <conv:BoolToVisibilityConverter/>
                                                            </Binding.Converter>
                                                        </Binding>
                                                    </MenuFlyoutItem.Visibility>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutItem Text="Check Summary" Click="CheckSummaryMenu_Click" 
                                                                Icon="View">
                                                    <MenuFlyoutItem.Visibility>
                                                        <Binding Path="IsBarTable">
                                                            <Binding.Converter>
                                                                <conv:BoolToVisibilityConverter/>
                                                            </Binding.Converter>
                                                        </Binding>
                                                    </MenuFlyoutItem.Visibility>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutItem Text="Close Table" Click="CloseTableMenu_Click" 
                                                                Icon="Cancel">
                                                    <MenuFlyoutItem.Visibility>
                                                        <Binding Path="IsBarTable">
                                                            <Binding.Converter>
                                                                <conv:BoolToVisibilityConverter/>
                                                            </Binding.Converter>
                                                        </Binding>
                                                    </MenuFlyoutItem.Visibility>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutItem Text="Move Table" Click="MoveMenu_Click" 
                                                                Icon="Forward">
                                                    <MenuFlyoutItem.Visibility>
                                                        <Binding Path="IsBarTable">
                                                            <Binding.Converter>
                                                                <conv:BoolToVisibilityConverter/>
                                                            </Binding.Converter>
                                                        </Binding>
                                                    </MenuFlyoutItem.Visibility>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutItem Text="Assign to Billiard Table" Click="AssignToBilliardMenu_Click" 
                                                                Icon="Forward">
                                                    <MenuFlyoutItem.Visibility>
                                                        <Binding Path="IsBarTable">
                                                            <Binding.Converter>
                                                                <conv:BoolToVisibilityConverter/>
                                                            </Binding.Converter>
                                                        </Binding>
                                                    </MenuFlyoutItem.Visibility>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutSeparator/>
                                                <MenuFlyoutItem Text="Run Diagnostics" Click="DiagnosticsMenu_Click" 
                                                                Icon="Repair"/>
                                            </MenuFlyout>
                                        </Border.ContextFlyout>
                                        <ToolTipService.ToolTip>
                                            <ToolTip>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Label}" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding StatusText}" Opacity="0.8"/>
                                                </StackPanel>
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                        
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Header with Status -->
                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                                <Border Width="12" Height="12" CornerRadius="6" Margin="0,0,8,0"
                                                        Background="{Binding Occupied, Converter={StaticResource OccupiedToColorConverter}}">
                                                    <TextBlock Text="{Binding Label}" 
                                                               FontSize="16" FontWeight="SemiBold" 
                                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                            </StackPanel>
                                            
                                            <!-- Table Visual -->
                                            <Grid Grid.Row="1" Margin="0,0,0,12">
                                                <Grid Width="120" Height="120" HorizontalAlignment="Center">
                                                    <Ellipse Fill="{Binding BackgroundBrush}" Width="120" Height="120"/>
                                                    <Ellipse Width="110" Height="110" Fill="#777" Opacity="0.35"/>
                                                    <Ellipse Width="100" Height="100" Fill="#aaa" Opacity="0.25"/>
                                                </Grid>
                                            </Grid>
                                            
                                            <!-- Footer Info -->
                                            <StackPanel Grid.Row="2" Spacing="4">
                                                <TextBlock Text="{Binding StatusText}" 
                                                           HorizontalAlignment="Center" 
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                           FontSize="12"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
