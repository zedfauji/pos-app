<Page
    x:Class="MagiDesk.Frontend.Views.InventoryManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="Inventory Management" FontSize="20" FontWeight="SemiBold"/>
            <Button Content="Add Item" Click="AddItem_Click"/>
            <Button Content="Refresh" Click="Refresh_Click"/>
            <TextBox x:Name="SearchBox" Width="260" PlaceholderText="Search items..." TextChanged="SearchBox_TextChanged"/>
        </StackPanel>

        <!-- Inventory Management Grid -->
        <ListView Grid.Row="1"
                  x:Name="InventoryGrid"
                  ItemsSource="{x:Bind _vm.InventoryItems, Mode=OneWay}"
                  SelectionMode="Single">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Grid Background="LightGray" Padding="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="SKU" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="Name" FontWeight="Bold"/>
                        <TextBlock Grid.Column="2" Text="Category" FontWeight="Bold"/>
                        <TextBlock Grid.Column="3" Text="Quantity" FontWeight="Bold"/>
                        <TextBlock Grid.Column="4" Text="Unit Cost" FontWeight="Bold"/>
                        <TextBlock Grid.Column="5" Text="Actions" FontWeight="Bold"/>
                    </Grid>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Sku}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="{Binding Category}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="3" Text="{Binding Quantity}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="4" Text="{Binding UnitCost}" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="5" Orientation="Horizontal" Spacing="4">
                            <Button Content="Edit" Click="EditItem_Click" Tag="{Binding}"/>
                            <Button Content="Adjust" Click="AdjustQuantity_Click" Tag="{Binding}"/>
                            <Button Content="Delete" Click="DeleteItem_Click" Tag="{Binding}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
