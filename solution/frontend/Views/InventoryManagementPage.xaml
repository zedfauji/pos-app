<Page
    x:Class="MagiDesk.Frontend.Views.InventoryManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,16">
            <TextBlock Text="Inventory Management" FontSize="24" FontWeight="SemiBold"/>
            <Button Content="Refresh" Click="Refresh_Click" HorizontalAlignment="Right"/>
        </StackPanel>

        <!-- KPI Cards -->
        <ScrollViewer Grid.Row="1" HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Auto" VerticalScrollMode="Disabled">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <!-- Total Stock Value -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="8" Padding="16" MinWidth="200">
                    <StackPanel>
                        <TextBlock Text="Total Stock Value" FontSize="12" Opacity="0.7"/>
                        <TextBlock Text="{x:Bind _vm.TotalStockValue, Mode=OneWay}" 
                                   FontSize="24" FontWeight="SemiBold" Margin="0,4,0,0"/>
                        <TextBlock Text="{x:Bind _vm.StockValueChange, Mode=OneWay}" 
                                   FontSize="12" Foreground="Green" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Low Stock Alerts -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="8" Padding="16" MinWidth="200">
                    <StackPanel>
                        <TextBlock Text="Low Stock Items" FontSize="12" Opacity="0.7"/>
                        <TextBlock Text="{x:Bind _vm.LowStockCount, Mode=OneWay}" 
                                   FontSize="24" FontWeight="SemiBold" Margin="0,4,0,0"/>
                        <TextBlock Text="Items need restocking" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Pending Orders -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="8" Padding="16" MinWidth="200">
                    <StackPanel>
                        <TextBlock Text="Pending Orders" FontSize="12" Opacity="0.7"/>
                        <TextBlock Text="{x:Bind _vm.PendingOrdersCount, Mode=OneWay}" 
                                   FontSize="24" FontWeight="SemiBold" Margin="0,4,0,0"/>
                        <TextBlock Text="Awaiting delivery" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Fast Movers -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="8" Padding="16" MinWidth="200">
                    <StackPanel>
                        <TextBlock Text="Fast Movers" FontSize="12" Opacity="0.7"/>
                        <TextBlock Text="{x:Bind _vm.FastMoversCount, Mode=OneWay}" 
                                   FontSize="24" FontWeight="SemiBold" Margin="0,4,0,0"/>
                        <TextBlock Text="High turnover items" FontSize="12" Opacity="0.7" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Navigation Tiles -->
        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Inventory Management Tile -->
            <Border Grid.Row="0" Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" Padding="16" Margin="0,0,8,8" Tapped="NavigateToInventory_Click">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE71D;" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Inventory" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,8,0,4"/>
                    <TextBlock Text="Manage items, stock levels, and categories" FontSize="12" Opacity="0.7" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Vendors Tile -->
            <Border Grid.Row="0" Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" Padding="16" Margin="4,0,4,8" Tapped="NavigateToVendors_Click">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE716;" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Vendors" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,8,0,4"/>
                    <TextBlock Text="Manage vendor profiles and relationships" FontSize="12" Opacity="0.7" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Restock Tile -->
            <Border Grid.Row="0" Grid.Column="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" Padding="16" Margin="8,0,0,8" Tapped="NavigateToRestock_Click">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE710;" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Restock" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,8,0,4"/>
                    <TextBlock Text="Create restock requests and manage orders" FontSize="12" Opacity="0.7" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Vendor Orders Tile -->
            <Border Grid.Row="1" Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" Padding="16" Margin="0,8,8,0" Tapped="NavigateToVendorOrders_Click">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE719;" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Vendor Orders" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,8,0,4"/>
                    <TextBlock Text="Track and manage vendor purchase orders" FontSize="12" Opacity="0.7" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Audit &amp; Reports Tile -->
            <Border Grid.Row="1" Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" Padding="16" Margin="4,8,4,0" Tapped="NavigateToAudit_Click">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE8A5;" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Audit &amp; Reports" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,8,0,4"/>
                    <TextBlock Text="View transaction logs and generate reports" FontSize="12" Opacity="0.7" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Settings Tile -->
            <Border Grid.Row="1" Grid.Column="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" Padding="16" Margin="8,8,0,0" Tapped="NavigateToSettings_Click">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE713;" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Settings" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,8,0,4"/>
                    <TextBlock Text="Configure inventory settings and preferences" FontSize="12" Opacity="0.7" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
