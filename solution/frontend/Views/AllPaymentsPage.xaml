<Page
    x:Class="MagiDesk.Frontend.Views.AllPaymentsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Refresh Button -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="All Payments" FontSize="28" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <Button x:Name="RefreshButton" Content="Refresh" Margin="20,0,0,0" Click="RefreshButton_Click"/>
        </StackPanel>

        <!-- Debug Info Panel -->
        <Border Grid.Row="1" Background="LightBlue" Padding="10" Margin="0,0,0,10" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="Debug Information:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Text="{x:Bind ViewModel.DebugInfo, Mode=OneWay}" Foreground="DarkBlue" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Statistics Panel -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" Background="LightBlue" Padding="15" Margin="0,0,5,0" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Total Payments" FontSize="12" Foreground="Gray"/>
                    <TextBlock Text="{x:Bind ViewModel.Payments.Count, Mode=OneWay}" FontSize="20" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="1" Background="LightGreen" Padding="15" Margin="5,0" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Total Amount" FontSize="12" Foreground="Gray"/>
                    <TextBlock Text="{x:Bind ViewModel.TotalAmount, Mode=OneWay}" FontSize="20" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="2" Background="LightYellow" Padding="15" Margin="5,0" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Cash Payments" FontSize="12" Foreground="Gray"/>
                    <TextBlock Text="{x:Bind ViewModel.CashCount, Mode=OneWay}" FontSize="20" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="3" Background="LightCoral" Padding="15" Margin="5,0,0,0" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Card Payments" FontSize="12" Foreground="Gray"/>
                    <TextBlock Text="{x:Bind ViewModel.CardCount, Mode=OneWay}" FontSize="20" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Search and Filter Controls -->
        <Grid Grid.Row="3" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="SearchBox" Grid.Column="0" PlaceholderText="Search payments..." TextChanged="SearchBox_TextChanged" Margin="0,0,10,0"/>
            
            <ComboBox x:Name="PaymentMethodFilter" Grid.Column="1" PlaceholderText="Payment Method" SelectionChanged="PaymentMethodFilter_SelectionChanged" Margin="0,0,10,0" Width="150">
                <ComboBoxItem Content="All Methods" Tag=""/>
                <ComboBoxItem Content="Cash" Tag="Cash"/>
                <ComboBoxItem Content="Card" Tag="Card"/>
                <ComboBoxItem Content="Digital" Tag="Digital"/>
            </ComboBox>
            
            <ComboBox x:Name="DateRangeFilter" Grid.Column="2" PlaceholderText="Date Range" SelectionChanged="DateRangeFilter_SelectionChanged" Width="150">
                <ComboBoxItem Content="All Time" Tag=""/>
                <ComboBoxItem Content="Today" Tag="today"/>
                <ComboBoxItem Content="This Week" Tag="week"/>
                <ComboBoxItem Content="This Month" Tag="month"/>
            </ComboBox>
        </Grid>
        
        <!-- Payments List -->
        <ListView Grid.Row="4" ItemsSource="{x:Bind ViewModel.FilteredPayments, Mode=OneWay}" SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="15" BorderBrush="LightGray" BorderThickness="0,0,0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding PaymentId}" FontWeight="SemiBold" FontSize="16"/>
                            <TextBlock Text="{Binding PaymentMethod}" Foreground="Gray" Margin="0,2,0,0"/>
                            <TextBlock Text="{Binding SessionId}" Foreground="Gray" FontSize="12" Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,10,0">
                            <TextBlock Text="{Binding AmountPaid}" FontWeight="SemiBold" FontSize="16"/>
                            <TextBlock Text="{Binding CreatedAt}" Foreground="Gray" FontSize="12" Margin="0,2,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button Content="Details" Margin="0,0,5,0" Click="ViewPaymentDetails_Click" Tag="{Binding}"/>
                            <Button Content="Refund" Click="ProcessRefund_Click" Tag="{Binding}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Grid.RowSpan="4" Background="#80000000" Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressRing IsActive="True" Width="50" Height="50"/>
                <TextBlock Text="Loading..." Margin="0,10,0,0" Foreground="White"/>
            </StackPanel>
        </Grid>

        <!-- Error Overlay -->
        <Grid x:Name="ErrorOverlay" Grid.RowSpan="4" Background="#80FF0000" Visibility="{x:Bind ViewModel.HasError, Mode=OneWay}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Error Loading Data" FontSize="18" Foreground="White" FontWeight="SemiBold"/>
                <TextBlock Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}" Margin="0,5,0,0" Foreground="White" TextWrapping="Wrap"/>
                <Button Content="Retry" Margin="0,10,0,0" Click="RefreshButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>