<Page
    x:Class="MagiDesk.Frontend.Views.UsersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:MagiDesk.Frontend.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolToStatusColorConverter x:Key="BoolToStatusColorConverter"/>
        <converters:BoolToStatusTextConverter x:Key="BoolToStatusTextConverter"/>
        <converters:DateTimeToStringConverter x:Key="DateTimeToStringConverter"/>
    </Page.Resources>

    <Grid Padding="16" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="User Management" FontSize="28" FontWeight="Bold" Margin="0,0,0,4"/>
                <TextBlock x:Name="UserStatsText" Text="Loading..." Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="14"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button x:Name="ExportButton" Click="Export_Click" Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE896;" FontSize="16"/>
                        <TextBlock Text="Export"/>
                    </StackPanel>
                </Button>
                <Button x:Name="RefreshButton" Click="Refresh_Click">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE149;" FontSize="16"/>
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Action Toolbar -->
        <Border Grid.Row="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" 
                CornerRadius="8" Padding="16">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button x:Name="NewButton" Click="New_Click" Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE109;" FontSize="16"/>
                        <TextBlock Text="Add User"/>
                    </StackPanel>
                </Button>
                <Button x:Name="EditButton" Click="Edit_Click" IsEnabled="False">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE104;" FontSize="16"/>
                        <TextBlock Text="Edit"/>
                    </StackPanel>
                </Button>
                <Button x:Name="ToggleActiveButton" Click="ToggleActive_Click" IsEnabled="False">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE8FB;" FontSize="16"/>
                        <TextBlock Text="Toggle Active"/>
                    </StackPanel>
                </Button>
                <Button x:Name="DeleteButton" Click="Delete_Click" IsEnabled="False" Foreground="Red">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE107;" FontSize="16"/>
                        <TextBlock Text="Delete"/>
                    </StackPanel>
                </Button>
                
                <Border Width="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="8,4"/>
                
                <ComboBox x:Name="BulkActionCombo" Header="Bulk Actions" MinWidth="140" SelectionChanged="BulkAction_SelectionChanged">
                    <ComboBoxItem Content="Select Action" IsEnabled="False"/>
                    <ComboBoxItem Content="Activate Selected" Tag="activate"/>
                    <ComboBoxItem Content="Deactivate Selected" Tag="deactivate"/>
                    <ComboBoxItem Content="Delete Selected" Tag="delete"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- Search and Filter Section -->
        <Border Grid.Row="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" 
                CornerRadius="8" Padding="16">
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="SearchBox" Grid.Column="0" PlaceholderText="Search users..." 
                         TextChanged="Search_TextChanged">
                    <TextBox.Resources>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                    CornerRadius="4">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <FontIcon Grid.Column="0" Glyph="&#xE094;" FontSize="16" 
                                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                                              Margin="8,0,4,0"/>
                                                    <ScrollViewer Grid.Column="1" x:Name="ContentElement" Margin="4,8,8,8"/>
                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                
                <ComboBox x:Name="RoleFilterCombo" Grid.Column="1" Header="Filter by Role" 
                          SelectionChanged="RoleFilter_SelectionChanged">
                    <ComboBoxItem Content="All Roles" Tag=""/>
                    <ComboBoxItem Content="Owner" Tag="Owner"/>
                    <ComboBoxItem Content="Administrator" Tag="Administrator"/>
                    <ComboBoxItem Content="Manager" Tag="Manager"/>
                    <ComboBoxItem Content="Server" Tag="Server"/>
                    <ComboBoxItem Content="Cashier" Tag="Cashier"/>
                    <ComboBoxItem Content="Host" Tag="Host"/>
                </ComboBox>
                
                <ComboBox x:Name="StatusFilterCombo" Grid.Column="2" Header="Filter by Status" 
                          SelectionChanged="StatusFilter_SelectionChanged">
                    <ComboBoxItem Content="All Users" Tag=""/>
                    <ComboBoxItem Content="Active Only" Tag="true"/>
                    <ComboBoxItem Content="Inactive Only" Tag="false"/>
                </ComboBox>
                
                <ComboBox x:Name="SortCombo" Grid.Column="3" Header="Sort by" 
                          SelectionChanged="Sort_SelectionChanged">
                    <ComboBoxItem Content="Username A-Z" Tag="Username_asc"/>
                    <ComboBoxItem Content="Username Z-A" Tag="Username_desc"/>
                    <ComboBoxItem Content="Role" Tag="Role_asc"/>
                    <ComboBoxItem Content="Created (Newest)" Tag="CreatedAt_desc"/>
                    <ComboBoxItem Content="Created (Oldest)" Tag="CreatedAt_asc"/>
                </ComboBox>
                
                <Button x:Name="ClearFiltersButton" Grid.Column="4" Click="ClearFilters_Click" 
                        VerticalAlignment="Bottom" Margin="0,0,0,4">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="&#xE894;" FontSize="14"/>
                        <TextBlock Text="Clear"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Loading indicator -->
        <ProgressBar x:Name="LoadingBar" Grid.Row="3" IsIndeterminate="False" Visibility="Collapsed" Margin="0,8"/>

        <!-- Users DataGrid -->
        <Border Grid.Row="4" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" 
                CornerRadius="8" Padding="1">
            <ListView x:Name="UsersListView" 
                      ItemsSource="{Binding Users}"
                      SelectionMode="Multiple"
                      SelectionChanged="UsersListView_SelectionChanged"
                      RightTapped="UsersListView_RightTapped">
                <ListView.Header>
                    <Grid Padding="16,12" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox x:Name="SelectAllCheckBox" Grid.Column="0" Checked="SelectAll_Checked" Unchecked="SelectAll_Unchecked"/>
                        <TextBlock Grid.Column="1" Text="Username" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="Role" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="3" Text="Status" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="4" Text="Created" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="5" Text="Last Updated" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="6" Text="Actions" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="16,12" Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Selection Checkbox -->
                            <CheckBox Grid.Column="0" VerticalAlignment="Center"/>
                            
                            <!-- Username with Avatar -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <PersonPicture Width="32" Height="32" DisplayName="{Binding Username}"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding Username}" FontWeight="Medium"/>
                                    <TextBlock Text="{Binding UserId}" FontSize="11" 
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Role with Badge -->
                            <Border Grid.Column="2" Background="{ThemeResource AccentFillColorDefaultBrush}" 
                                    CornerRadius="12" Padding="8,4" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Role}" FontSize="12" FontWeight="Medium" 
                                           Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                            </Border>
                            
                            <!-- Status -->
                            <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                <Ellipse Width="8" Height="8">
                                    <Ellipse.Fill>
                                        <SolidColorBrush Color="{Binding IsActive, Converter={StaticResource BoolToStatusColorConverter}}"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <TextBlock Text="{Binding IsActive, Converter={StaticResource BoolToStatusTextConverter}}" FontSize="13"/>
                            </StackPanel>
                            
                            <!-- Created Date -->
                            <TextBlock Grid.Column="4" Text="{Binding CreatedAt, Converter={StaticResource DateTimeToStringConverter}}" 
                                       VerticalAlignment="Center" FontSize="13"/>
                            
                            <!-- Updated Date -->
                            <TextBlock Grid.Column="5" Text="{Binding UpdatedAt, Converter={StaticResource DateTimeToStringConverter}}" 
                                       VerticalAlignment="Center" FontSize="13"/>
                            
                            <!-- Quick Actions -->
                            <StackPanel Grid.Column="6" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                <Button Background="Transparent" BorderThickness="0" Padding="4" 
                                        Click="QuickEdit_Click" Tag="{Binding}">
                                    <FontIcon Glyph="&#xE104;" FontSize="14"/>
                                </Button>
                                <Button Background="Transparent" BorderThickness="0" Padding="4" 
                                        Click="QuickToggle_Click" Tag="{Binding}">
                                    <FontIcon Glyph="&#xE8FB;" FontSize="14"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Edit User" Icon="Edit" Click="Edit_Click"/>
                        <MenuFlyoutItem Text="Toggle Active Status" Icon="Accept" Click="ToggleActive_Click"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem Text="Reset Password" Icon="Permissions" Click="ResetPassword_Click"/>
                        <MenuFlyoutItem Text="View Details" Icon="View" Click="ViewDetails_Click"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem Text="Delete User" Icon="Delete" Click="Delete_Click" Foreground="Red"/>
                    </MenuFlyout>
                </ListView.ContextFlyout>
            </ListView>
        </Border>

        <!-- Pagination -->
        <Grid Grid.Row="5" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock x:Name="PaginationInfo" Grid.Column="0" Text="Showing 1-20 of 100 users" 
                       VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button x:Name="PrevPageButton" Click="PrevPage_Click" IsEnabled="False">
                    <FontIcon Glyph="&#xE0A6;" FontSize="14"/>
                </Button>
                <ComboBox x:Name="PageSizeCombo" SelectionChanged="PageSize_SelectionChanged" MinWidth="80">
                    <ComboBoxItem Content="10" Tag="10"/>
                    <ComboBoxItem Content="20" Tag="20" IsSelected="True"/>
                    <ComboBoxItem Content="50" Tag="50"/>
                    <ComboBoxItem Content="100" Tag="100"/>
                </ComboBox>
                <Button x:Name="NextPageButton" Click="NextPage_Click">
                    <FontIcon Glyph="&#xE0A7;" FontSize="14"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Status Bar -->
        <InfoBar x:Name="StatusInfoBar" Grid.Row="6" IsOpen="False" Severity="Informational" Margin="0,8,0,0"/>
    </Grid>
</Page>
