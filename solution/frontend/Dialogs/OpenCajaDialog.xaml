<ContentDialog
    x:Class="MagiDesk.Frontend.Dialogs.OpenCajaDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Abrir la Caja"
    PrimaryButtonText="Abrir"
    CloseButtonText="Cancelar"
    DefaultButton="Primary"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <StackPanel Spacing="16" MinWidth="400">
        <TextBlock Text="Ingrese el monto inicial de la caja" 
                   FontSize="16" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,8"/>
        
        <TextBox x:Name="OpeningAmountTextBox"
                 Header="Monto de Apertura ($)"
                 PlaceholderText="0.00"
                 InputScope="Number"
                 TextChanged="OpeningAmountTextBox_TextChanged"/>

        <TextBox x:Name="NotesTextBox"
                 Header="Notas (Opcional)"
                 PlaceholderText="Ingrese notas adicionales..."
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 MinHeight="80"/>

        <Border x:Name="ErrorMessageBorder" 
                Background="#FFD13438" 
                CornerRadius="8" 
                Padding="12" 
                Visibility="Collapsed"
                Margin="0,8,0,0">
            <TextBlock x:Name="ErrorMessageText" 
                       Text="" 
                       Foreground="White" 
                       TextWrapping="Wrap"/>
        </Border>
    </StackPanel>
</ContentDialog>
