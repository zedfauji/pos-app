<ContentDialog
    x:Class="MagiDesk.Frontend.Dialogs.OrderBuilderDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ct="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Title="Build Order"
    PrimaryButtonText="Next"
    SecondaryButtonText="Back"
    CloseButtonText="Cancel"
    DefaultButton="Primary">
    <Grid MinWidth="720" MinHeight="460" Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="StepTitle" FontSize="18" FontWeight="SemiBold"/>

        <Grid Grid.Row="1">
            <Frame x:Name="StepFrame"/>
        </Grid>
    </Grid>
</ContentDialog>
