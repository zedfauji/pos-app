<ContentDialog x:Class="MagiDesk.Frontend.Dialogs.TableStatusDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               Title="Table Status"
               PrimaryButtonText="Close"
               DefaultButton="Primary"
               MaxWidth="900"
               MaxHeight="800">

    <ContentDialog.Resources>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#CCCCCC"/>
        
        <!-- Status Indicator Style -->
        <Style x:Key="StatusIndicatorStyle" TargetType="Border">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </ContentDialog.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Table Info Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" 
                CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock x:Name="TableNameText" FontSize="20" FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="Server:" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock x:Name="ServerText" FontSize="14" 
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Start Time:" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock x:Name="StartTimeText" FontSize="14" 
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Total Time:" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock x:Name="TotalTimeText" FontSize="14" 
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Session Status -->
        <Border Grid.Row="1" Background="{StaticResource CardBackgroundBrush}" 
                CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal" Spacing="16">
                <Border Style="{StaticResource StatusIndicatorStyle}">
                    <Border.Background>
                        <SolidColorBrush x:Name="StatusColor" Color="#00C851"/>
                    </Border.Background>
                </Border>
                <TextBlock x:Name="StatusText" FontSize="16" FontWeight="SemiBold" 
                           Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Orders and Items -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="OrdersPanel" Spacing="12"/>
        </ScrollViewer>

        <!-- Summary -->
        <Border Grid.Row="3" Background="{StaticResource CardBackgroundBrush}" 
                CornerRadius="8" Padding="16" Margin="0,16,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="24">
                <StackPanel>
                    <TextBlock Text="Total Orders:" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock x:Name="TotalOrdersText" FontSize="16" FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Total Amount:" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock x:Name="TotalAmountText" FontSize="16" FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</ContentDialog>
