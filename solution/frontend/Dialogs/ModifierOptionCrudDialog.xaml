<ContentDialog
    x:Class="MagiDesk.Frontend.Dialogs.ModifierOptionCrudDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Modifier Option"
    PrimaryButtonText="Save"
    CloseButtonText="Cancel"
    DefaultButton="Primary">

    <ScrollViewer MaxHeight="400">
        <StackPanel Spacing="16" Padding="0,8">
            <StackPanel>
                <TextBlock Text="Name" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="NameTextBox" 
                         Text="{Binding Name, Mode=TwoWay}"
                         PlaceholderText="Enter option name"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Price Delta" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <NumberBox x:Name="PriceDeltaNumberBox" 
                            Value="{Binding PriceDelta, Mode=TwoWay}"
                            Minimum="-999.99"
                            Maximum="999.99"
                            SmallChange="0.01"
                            LargeChange="1.00"
                            PlaceholderText="0.00"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
