<UserControl
    x:Class="MagiDesk.Frontend.Panes.PaymentPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    Width="500"
    Height="700"
    Background="White">

    <UserControl.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemAccentColor}"/>
        </Style>
        
        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>
        
        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemBaseMediumColor}"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                Padding="24,16"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Payment Processing" 
                               Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Text="Complete your payment" 
                               Style="{StaticResource InfoTextStyle}"/>
                </StackPanel>
                
                <Button Grid.Column="1"
                        x:Name="CloseButton"
                        Click="OnClose"
                        ToolTipService.ToolTip="Close payment pane">
                    <SymbolIcon Symbol="Cancel"/>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" 
                      Padding="24"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">
                
                <!-- Bill Summary Card -->
                <Border Background="{ThemeResource SystemControlBackgroundListLowBrush}" 
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Bill Summary" 
                                   Style="{StaticResource SubHeaderTextStyle}"/>
                        
                        <!-- Bill Details Grid -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Bill ID:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding BillingId}" Margin="8,0,0,0"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Total Due:" FontWeight="SemiBold" Margin="16,0,0,0"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding TotalDue}" 
                                       FontWeight="SemiBold" Margin="8,0,0,0"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Session:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SessionId}" Margin="8,0,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="Items:" FontWeight="SemiBold" Margin="16,0,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Items.Count}" Margin="8,0,0,0"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Server:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="Server Name" Margin="8,0,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="Table:" FontWeight="SemiBold" Margin="16,0,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" Text="Table 1" Margin="8,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Payment Method Selection -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Payment Method" 
                               Style="{StaticResource SubHeaderTextStyle}"/>
                    
                    <RadioButtons x:Name="PaymentMethodRadioButtons"
                                  ItemsSource="{Binding Methods}"
                                  SelectedItem="{Binding SelectedMethod, Mode=TwoWay}"
                                  SelectionChanged="OnPaymentMethodChanged">
                        <RadioButtons.ItemTemplate>
                            <DataTemplate>
                                <RadioButton Content="{Binding}" 
                                             Tag="{Binding}"
                                             Margin="0,4"/>
                            </DataTemplate>
                        </RadioButtons.ItemTemplate>
                    </RadioButtons>
                </StackPanel>

                <!-- Amount Input Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Payment Amount" 
                               Style="{StaticResource SubHeaderTextStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <NumberBox Grid.Column="0"
                                   x:Name="AmountNumberBox"
                                   Value="{Binding Amount, Mode=TwoWay}"
                                   Minimum="0"
                                   Maximum="999999"
                                   SpinButtonPlacementMode="Inline"
                                   Header="Enter amount"
                                   PlaceholderText="0.00"/>
                        
                        <Button Grid.Column="1"
                                x:Name="ExactAmountButton"
                                Click="OnExactAmount"
                                Margin="8,0,0,0"
                                ToolTipService.ToolTip="Set exact amount due">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <SymbolIcon Symbol="Calculator"/>
                                <TextBlock Text="Exact"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>

                <!-- Tip Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Tip (Optional)" 
                               Style="{StaticResource SubHeaderTextStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <NumberBox Grid.Column="0"
                                   x:Name="TipNumberBox"
                                   Value="{Binding Tip, Mode=TwoWay}"
                                   Minimum="0"
                                   Maximum="999"
                                   SpinButtonPlacementMode="Inline"
                                   Header="Enter tip amount"
                                   PlaceholderText="0.00"/>
                        
                        <Button Grid.Column="1"
                                x:Name="Tip10Button"
                                Click="OnTip10"
                                Margin="8,0,4,0"
                                ToolTipService.ToolTip="10% tip">
                            <TextBlock Text="10%"/>
                        </Button>
                        
                        <Button Grid.Column="2"
                                x:Name="Tip15Button"
                                Click="OnTip15"
                                Margin="4,0,4,0"
                                ToolTipService.ToolTip="15% tip">
                            <TextBlock Text="15%"/>
                        </Button>
                        
                        <Button Grid.Column="3"
                                x:Name="Tip20Button"
                                Click="OnTip20"
                                Margin="4,0,0,0"
                                ToolTipService.ToolTip="20% tip">
                            <TextBlock Text="20%"/>
                        </Button>
                    </Grid>
                </StackPanel>

                <!-- Payment Summary -->
                <Border Background="{ThemeResource SystemControlBackgroundListMediumBrush}" 
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="16">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Payment Summary" 
                                   Style="{StaticResource SubHeaderTextStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Amount Paid:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding PaidText}" FontWeight="SemiBold"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Tip:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Tip}" FontWeight="SemiBold"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Total Due:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding TotalDue}" FontWeight="SemiBold"/>
                            
                            <Border Grid.Row="3" Grid.ColumnSpan="2" 
                                    Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                    CornerRadius="4" Padding="8" Margin="0,8,0,0">
                                <TextBlock Text="{Binding BalanceText}" 
                                           FontWeight="SemiBold" 
                                           HorizontalAlignment="Center"
                                           Foreground="{ThemeResource SystemAccentColor}"/>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Error Messages -->
                <Border x:Name="ErrorBorder"
                        Background="Red"
                        BorderBrush="Red"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12"
                        Visibility="Collapsed">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Error" 
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                        <TextBlock x:Name="ErrorText"
                                   Text="{Binding Error}" 
                                   TextWrapping="Wrap"
                                   Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Success Messages -->
                <Border x:Name="SuccessBorder"
                        Background="Green"
                        BorderBrush="Green"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12"
                        Visibility="Collapsed">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Payment Complete!" 
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                        <TextBlock Text="Your payment has been processed successfully." 
                                   TextWrapping="Wrap"
                                   Foreground="White"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Actions -->
        <Border Grid.Row="2" 
                Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                Padding="24,16"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Print Pro Forma Button -->
                <Button Grid.Column="0"
                        x:Name="PrintProFormaButton"
                        Click="OnPrintProForma"
                        Margin="0,0,8,0"
                        ToolTipService.ToolTip="Print pro forma receipt">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="Print"/>
                        <TextBlock Text="Print Receipt"/>
                    </StackPanel>
                </Button>
                
                <!-- Export PDF Button -->
                <Button Grid.Column="1"
                        x:Name="ExportPdfButton"
                        Click="OnExportPdf"
                        Margin="0,0,8,0"
                        ToolTipService.ToolTip="Export receipt as PDF">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="Document"/>
                        <TextBlock Text="Export PDF"/>
                    </StackPanel>
                </Button>
                
                <!-- Confirm Payment Button -->
                <Button Grid.Column="2"
                        x:Name="ConfirmPaymentButton"
                        Click="OnConfirmPayment"
                        ToolTipService.ToolTip="Confirm and process payment">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="Accept"/>
                        <TextBlock Text="Confirm Payment"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>