<UserControl
    x:Class="MagiDesk.Frontend.Panes.ReceiptPrinterPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    Width="450"
    Height="600"
    Background="White">

    <UserControl.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemAccentColor}"/>
        </Style>
        
        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>
        
        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemBaseMediumColor}"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                Padding="24,16"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="ReceiptTitleText"
                               Text="Receipt Printer" 
                               Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Text="Print or preview your receipt" 
                               Style="{StaticResource InfoTextStyle}"/>
                </StackPanel>
                
                <Button Grid.Column="1"
                        x:Name="CloseButton"
                        Click="OnClose"
                        ToolTipService.ToolTip="Close receipt printer pane">
                    <SymbolIcon Symbol="Cancel"/>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" 
                      Padding="24"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">
                
                <!-- Receipt Information Card -->
                <Border Background="{ThemeResource SystemControlBackgroundListLowBrush}" 
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Receipt Information" 
                                   Style="{StaticResource SubHeaderTextStyle}"/>
                        
                        <!-- Receipt Details -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Bill ID:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="BillIdText" Text="Unknown" Margin="8,0,0,0"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Table:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TableNumberText" Text="Unknown" Margin="8,0,0,0"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Total:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TotalAmountText" Text="$0.00" 
                                       FontWeight="SemiBold" Margin="8,0,0,0"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Items:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="ItemCountText" Text="0" Margin="8,0,0,0"/>
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" x:Name="PaymentMethodLabel" 
                                       Text="Payment:" FontWeight="SemiBold" Visibility="Collapsed"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="PaymentMethodText" 
                                       Text="Unknown" Margin="8,0,0,0" Visibility="Collapsed"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Print Options -->
                <StackPanel Spacing="16">
                    <TextBlock Text="Print Options" 
                               Style="{StaticResource SubHeaderTextStyle}"/>
                    
                    <!-- Print Format Selection -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Paper Format" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"/>
                        
                        <RadioButtons x:Name="PaperFormatRadioButtons"
                                      SelectedIndex="0">
                            <RadioButton Content="58mm Thermal Printer" 
                                         Tag="58mm" 
                                         Margin="0,4"/>
                            <RadioButton Content="80mm Thermal Printer" 
                                         Tag="80mm" 
                                         Margin="0,4"/>
                            <RadioButton Content="Standard A4" 
                                         Tag="A4" 
                                         Margin="0,4"/>
                        </RadioButtons>
                    </StackPanel>

                    <!-- Printer Selection -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Printer" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"/>
                        
                        <ComboBox x:Name="PrinterComboBox"
                                  PlaceholderText="Select printer"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="Default Printer"/>
                            <ComboBoxItem Content="Thermal Printer 58mm"/>
                            <ComboBoxItem Content="Thermal Printer 80mm"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Receipt Type Selection -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Receipt Type" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"/>
                        
                        <RadioButtons x:Name="ReceiptTypeRadioButtons"
                                      SelectedIndex="0">
                            <RadioButton Content="Pro Forma (Pre-Bill)" 
                                         Tag="proforma" 
                                         Margin="0,4"/>
                            <RadioButton Content="Final Receipt" 
                                         Tag="final" 
                                         Margin="0,4"/>
                        </RadioButtons>
                    </StackPanel>
                </StackPanel>

                <!-- Print Preview Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Print Preview" 
                               Style="{StaticResource SubHeaderTextStyle}"/>
                    
                    <Border Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                            BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12"
                            Height="200">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="PreviewText"
                                       Text="Receipt preview will appear here..."
                                       TextWrapping="Wrap"
                                       FontFamily="Consolas"
                                       FontSize="10"/>
                        </ScrollViewer>
                    </Border>
                    
                    <Button x:Name="RefreshPreviewButton"
                            Click="OnRefreshPreview"
                            HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <SymbolIcon Symbol="Refresh"/>
                            <TextBlock Text="Refresh Preview"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Status Messages -->
                <Border x:Name="StatusBorder"
                        Background="Green"
                        BorderBrush="Green"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12"
                        Visibility="Collapsed">
                    <TextBlock x:Name="StatusText" 
                               Text="Status message" 
                               TextWrapping="Wrap"
                               Foreground="White"/>
                </Border>

                <!-- Error Messages -->
                <Border x:Name="ErrorBorder"
                        Background="Red"
                        BorderBrush="Red"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12"
                        Visibility="Collapsed">
                    <TextBlock x:Name="ErrorText" 
                               Text="Error message" 
                               TextWrapping="Wrap"
                               Foreground="White"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Actions -->
        <Border Grid.Row="2" 
                Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                Padding="24,16"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Open PDF Button -->
                <Button Grid.Column="0"
                        x:Name="OpenPdfButton"
                        Click="OnOpenPdf"
                        Margin="0,0,8,0"
                        ToolTipService.ToolTip="Open PDF in default application">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="Document"/>
                        <TextBlock Text="Open PDF"/>
                    </StackPanel>
                </Button>
                
                <!-- Print Button -->
                <Button Grid.Column="1"
                        x:Name="PrintButton"
                        Click="OnPrint"
                        ToolTipService.ToolTip="Print receipt to selected printer">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="Print"/>
                        <TextBlock Text="Print"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>