<Page
    x:Class="MagiDesk.Frontend.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Padding="24">
        <StackPanel Spacing="12" Width="480">
            <TextBlock Text="Settings" FontSize="24" FontWeight="SemiBold"/>
            <TextBlock Text="Backend Base URL"/>
            <TextBox x:Name="BaseUrlText" PlaceholderText="https://your-cloud-run-url"/>
            <Button Content="Save" Click="Save_Click" HorizontalAlignment="Left"/>
            <TextBlock x:Name="StatusText"/>
        </StackPanel>
    </Grid>
</Page>
