<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MagiDesk.Frontend.Views.CustomerRegistrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MagiDesk.Frontend.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- Using Fluent styles from DesignSystem.xaml -->
    </Page.Resources>

    <ScrollViewer VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto">
        <Grid MaxWidth="800" HorizontalAlignment="Center" Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="24,16" CornerRadius="8" Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                            x:Name="BackButton"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="8"
                            Click="BackButton_Click">
                        <FontIcon Glyph="&#xE72B;" FontSize="16"/>
                    </Button>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center" Style="{StaticResource FluentPageHeaderStyle}">
                        <TextBlock Text="Add New Customer" 
                                   Style="{StaticResource TitleTextStyle}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Create a new customer profile" 
                                   Style="{StaticResource CaptionTextStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <ProgressRing x:Name="LoadingRing" 
                                  Grid.Column="2"
                                  Width="24" 
                                  Height="24" 
                                  IsActive="False"/>
                </Grid>
            </Border>

            <!-- Form Content -->
            <StackPanel Grid.Row="1">
                <!-- Personal Information -->
                <Border Style="{StaticResource FluentCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Personal Information" 
                                   Style="{StaticResource SubtitleTextStyle}"
                                   Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- First Name -->
                            <StackPanel Grid.Column="0" Style="{StaticResource FormFieldStyle}">
                                <TextBlock Text="First Name *" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox x:Name="FirstNameTextBox" 
                                         Style="{StaticResource FormInputStyle}"
                                         PlaceholderText="Enter first name"/>
                            </StackPanel>

                            <!-- Last Name -->
                            <StackPanel Grid.Column="2" Style="{StaticResource FormFieldStyle}">
                                <TextBlock Text="Last Name *" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox x:Name="LastNameTextBox" 
                                         Style="{StaticResource FormInputStyle}"
                                         PlaceholderText="Enter last name"/>
                            </StackPanel>
                        </Grid>

                        <!-- Date of Birth -->
                        <StackPanel Style="{StaticResource FormFieldStyle}">
                            <TextBlock Text="Date of Birth" Style="{StaticResource FormLabelStyle}"/>
                            <DatePicker x:Name="DateOfBirthPicker" 
                                        DateChanged="DateOfBirthPicker_DateChanged"
                                        HorizontalAlignment="Left"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Contact Information -->
                <Border Style="{StaticResource FluentCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Contact Information" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,20"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Email -->
                            <StackPanel Grid.Column="0" Style="{StaticResource FormFieldStyle}">
                                <TextBlock Text="Email Address" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox x:Name="EmailTextBox" 
                                         Style="{StaticResource FormInputStyle}"
                                         PlaceholderText="Enter email address"
                                         InputScope="EmailNameOrAddress"/>
                            </StackPanel>

                            <!-- Phone -->
                            <StackPanel Grid.Column="2" Style="{StaticResource FormFieldStyle}">
                                <TextBlock Text="Phone Number" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox x:Name="PhoneTextBox" 
                                         Style="{StaticResource FormInputStyle}"
                                         PlaceholderText="Enter phone number"
                                         InputScope="TelephoneNumber"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Membership Information -->
                <Border Style="{StaticResource FluentCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Membership Information" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,20"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Membership Level -->
                            <StackPanel Grid.Column="0" Style="{StaticResource FormFieldStyle}">
                                <TextBlock Text="Membership Level" Style="{StaticResource FormLabelStyle}"/>
                                <ComboBox x:Name="MembershipLevelComboBox" 
                                          HorizontalAlignment="Stretch"
                                          PlaceholderText="Select membership level">
                                    <ComboBox.Resources>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="CornerRadius" Value="6"/>
                                        </Style>
                                    </ComboBox.Resources>
                                </ComboBox>
                            </StackPanel>

                            <!-- Membership Expiry -->
                            <StackPanel Grid.Column="2" Style="{StaticResource FormFieldStyle}">
                                <TextBlock Text="Membership Expiry" Style="{StaticResource FormLabelStyle}"/>
                                <DatePicker x:Name="MembershipExpiryPicker" 
                                            DateChanged="MembershipExpiryPicker_DateChanged"
                                            HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Additional Information -->
                <Border Style="{StaticResource FluentCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Additional Information" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,20"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                        <!-- Notes -->
                        <StackPanel Style="{StaticResource FormFieldStyle}">
                            <TextBlock Text="Notes" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox x:Name="NotesTextBox" 
                                     Style="{StaticResource FormInputStyle}"
                                     PlaceholderText="Enter any additional notes..."
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="80"/>
                        </StackPanel>

                        <!-- Active Status -->
                        <StackPanel Style="{StaticResource FormFieldStyle}">
                            <CheckBox x:Name="IsActiveCheckBox" 
                                      Content="Customer is active" 
                                      IsChecked="True"
                                      FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Action Buttons -->
            <Border Grid.Row="2" Padding="0,24,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Validation Messages -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock x:Name="ValidationMessageText" 
                                   Text="" 
                                   Foreground="Red" 
                                   FontSize="14"
                                   Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Cancel Button -->
                    <Button Grid.Column="1" 
                            x:Name="CancelButton"
                            Content="Cancel" 
                            Style="{StaticResource FluentSecondaryButtonStyle}"
                            Click="CancelButton_Click"/>

                    <!-- Save Button -->
                    <Button Grid.Column="3" 
                            x:Name="SaveButton"
                            Content="Create Customer" 
                            Style="{StaticResource FluentPrimaryButtonStyle}"
                            Click="SaveButton_Click"/>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
