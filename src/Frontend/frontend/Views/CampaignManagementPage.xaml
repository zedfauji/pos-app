<Page
    x:Class="MagiDesk.Frontend.Views.CampaignManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MagiDesk.Frontend.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
              Padding="24,16" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Style="{StaticResource FluentPageHeaderStyle}">
                <TextBlock Text="Campaign Management" 
                          Style="{StaticResource TitleTextStyle}"/>
                <TextBlock Text="Create and manage marketing campaigns for customer engagement" 
                          Style="{StaticResource CaptionTextStyle}"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                          Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                <Button x:Name="RefreshButton" 
                        Style="{StaticResource FluentSecondaryButtonStyle}"
                        Click="RefreshButton_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                            <TextBlock Text="Refresh"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button x:Name="CreateCampaignButton" 
                        Style="{StaticResource FluentPrimaryButtonStyle}"
                        Click="CreateCampaignButton_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE710;" FontSize="16"/>
                            <TextBlock Text="Create Campaign"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="24,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Filters and Search -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="SearchBox" 
                             Grid.Column="0"
                             PlaceholderText="Search campaigns..." 
                             Margin="0,0,12,0"
                             TextChanged="SearchBox_TextChanged">
                        <TextBox.Resources>
                            <Style TargetType="TextBox" BasedOn="{StaticResource FluentTextBoxStyle}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Grid>
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <FontIcon Grid.Column="0" 
                                                                  Glyph="&#xE721;" 
                                                                  FontSize="16" 
                                                                  Margin="12,0,8,0"
                                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                        <ScrollViewer Grid.Column="1" 
                                                                      x:Name="ContentElement" 
                                                                      Margin="0,8,12,8"/>
                                                    </Grid>
                                                </Border>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <ComboBox x:Name="StatusFilterComboBox" 
                              Grid.Column="1"
                              PlaceholderText="Status" 
                              Width="120" 
                              Margin="0,0,12,0"
                              SelectionChanged="StatusFilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="Active"/>
                        <ComboBoxItem Content="Inactive"/>
                        <ComboBoxItem Content="Scheduled"/>
                        <ComboBoxItem Content="Completed"/>
                    </ComboBox>

                    <ComboBox x:Name="TypeFilterComboBox" 
                              Grid.Column="2"
                              PlaceholderText="Type" 
                              Width="120" 
                              Margin="0,0,12,0"
                              SelectionChanged="TypeFilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="Discount"/>
                        <ComboBoxItem Content="Loyalty"/>
                        <ComboBoxItem Content="Wallet"/>
                        <ComboBoxItem Content="FreeItem"/>
                        <ComboBoxItem Content="Upgrade"/>
                    </ComboBox>

                    <ComboBox x:Name="ChannelFilterComboBox" 
                              Grid.Column="3"
                              PlaceholderText="Channel" 
                              Width="120"
                              SelectionChanged="ChannelFilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="Email"/>
                        <ComboBoxItem Content="SMS"/>
                        <ComboBoxItem Content="WhatsApp"/>
                        <ComboBoxItem Content="InApp"/>
                    </ComboBox>
                </Grid>

                <!-- Campaigns List -->
                <ListView x:Name="CampaignsListView" 
                          Grid.Row="1"
                          SelectionMode="Single"
                          SelectionChanged="CampaignsListView_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="20"
                                    Margin="0,0,0,12">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Campaign Header -->
                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,8">
                                        <TextBlock Text="{Binding Name}" 
                                                   Style="{ThemeResource SubtitleTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                        <TextBlock Text="{Binding Description}" 
                                                   Style="{ThemeResource BodyTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   Margin="0,4,0,0"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <!-- Status Badge -->
                                    <Border Grid.Row="0" Grid.Column="1" 
                                            Background="{Binding Status, Converter={StaticResource StatusToBrushConverter}}"
                                            CornerRadius="12"
                                            Padding="12,4"
                                            VerticalAlignment="Top">
                                        <TextBlock Text="{Binding Status}" 
                                                   Style="{ThemeResource CaptionTextBlockStyle}"
                                                   Foreground="White"
                                                   FontWeight="SemiBold"/>
                                    </Border>

                                    <!-- Campaign Details -->
                                    <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,8,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Type" 
                                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="{Binding CampaignType}" 
                                                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Channel" 
                                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="{Binding Channel}" 
                                                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Target Segment" 
                                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="{Binding TargetSegmentName, FallbackValue='All Customers'}" 
                                                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="3">
                                            <TextBlock Text="Redemption Rate" 
                                                       Style="{ThemeResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="{Binding RedemptionRateFormatted}" 
                                                       Style="{ThemeResource BodyStrongTextBlockStyle}"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Campaign Dates -->
                                    <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="16" Margin="0,8,0,8">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon Glyph="&#xE787;" FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="Start:" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="{Binding StartDateFormatted}" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon Glyph="&#xE787;" FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="End:" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="{Binding EndDateFormatted}" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Action Buttons -->
                                    <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                                        <Button Style="{ThemeResource DefaultButtonStyle}"
                                                Click="ViewAnalyticsButton_Click"
                                                Tag="{Binding}">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal" Spacing="6">
                                                    <FontIcon Glyph="&#xE9D9;" FontSize="14"/>
                                                    <TextBlock Text="Analytics"/>
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                        <Button Style="{ThemeResource DefaultButtonStyle}"
                                                Click="EditCampaignButton_Click"
                                                Tag="{Binding}">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal" Spacing="6">
                                                    <FontIcon Glyph="&#xE70F;" FontSize="14"/>
                                                    <TextBlock Text="Edit"/>
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                        <Button Style="{ThemeResource AccentButtonStyle}"
                                                Click="ExecuteCampaignButton_Click"
                                                Tag="{Binding}"
                                                IsEnabled="{Binding IsActive}">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal" Spacing="6">
                                                    <FontIcon Glyph="&#xE768;" FontSize="14"/>
                                                    <TextBlock Text="Execute"/>
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Empty State -->
                <StackPanel x:Name="EmptyStatePanel" 
                            Grid.Row="1"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Spacing="16"
                            Visibility="Collapsed">
                    <FontIcon Glyph="&#xE8F1;" FontSize="48" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="No campaigns found" 
                               Style="{ThemeResource SubtitleTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Create your first campaign to start engaging with customers" 
                               Style="{ThemeResource BodyTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                    <Button Style="{ThemeResource AccentButtonStyle}"
                            Click="CreateCampaignButton_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE710;" FontSize="16"/>
                                <TextBlock Text="Create Campaign"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <!-- Loading State -->
                <StackPanel x:Name="LoadingPanel" 
                            Grid.Row="1"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Spacing="16"
                            Visibility="Collapsed">
                    <ProgressRing IsActive="True" Width="48" Height="48"/>
                    <TextBlock Text="Loading campaigns..." 
                               Style="{ThemeResource BodyTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
