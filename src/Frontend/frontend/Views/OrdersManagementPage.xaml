<Page
    x:Class="MagiDesk.Frontend.Views.OrdersManagementPage"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:MagiDesk.Frontend.ViewModels"
    xmlns:converters="using:MagiDesk.Frontend.Converters"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Converters -->
        <converters:StringToBrushConverter x:Key="StringToBrushConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BoolToStatusBrushConverter x:Key="BoolToStatusBrushConverter"/>
        
        <!-- Order Card Style (nested card) -->
        <Style x:Key="OrderCardStyle" TargetType="Border" BasedOn="{StaticResource FluentCardStyle}">
            <Setter Property="Background" Value="{ThemeResource SolidBackgroundFillColorBase}"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>
    </Page.Resources>

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Fluent Page Header -->
        <StackPanel Grid.Row="0" Style="{StaticResource FluentPageHeaderStyle}">
            <TextBlock Text="Orders by Table" 
                       Style="{StaticResource DisplayTextStyle}"
                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
            <TextBlock Text="View and manage orders grouped by table" 
                       Style="{StaticResource CaptionTextStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <Button Content="Refresh" 
                    Style="{StaticResource FluentPrimaryButtonStyle}"
                    Command="{Binding RefreshCommand}"
                    HorizontalAlignment="Left"
                    Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Orders by Table -->
        <ScrollViewer Grid.Row="1" VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto" Padding="24">
            <StackPanel Spacing="16">
                <ItemsControl ItemsSource="{Binding TableGroups}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource FluentCardStyle}">
                                <StackPanel>
                                    <!-- Table Header -->
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding TableLabel}" 
                                                     Style="{StaticResource TitleTextStyle}"
                                                     Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                            <TextBlock Text="{Binding OrderCountText}" 
                                                     Style="{StaticResource BodyTextStyle}"
                                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Margin="16,0">
                                            <TextBlock Text="Revenue" 
                                                     Style="{StaticResource CaptionTextStyle}"
                                                     HorizontalAlignment="Center"
                                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="{Binding TotalRevenueFormatted}" 
                                                     Style="{StaticResource SubtitleTextStyle}"
                                                     FontWeight="Bold"
                                                     HorizontalAlignment="Center"
                                                     Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                        </StackPanel>

                                        <Border Grid.Column="2" 
                                                Style="{StaticResource FluentStatusBadgeStyle}"
                                                Background="{Binding HasActiveOrders, Converter={StaticResource BoolToStatusBrushConverter}}"
                                                Visibility="{Binding HasActiveOrders, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <TextBlock Text="Active" 
                                                     Style="{StaticResource CaptionTextStyle}"
                                                     FontWeight="SemiBold" 
                                                     Foreground="White"/>
                                        </Border>
                                    </Grid>

                                    <!-- Orders List -->
                                    <ItemsControl ItemsSource="{Binding Orders}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource OrderCardStyle}">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Order Info -->
                                                        <StackPanel Grid.Row="0" Grid.Column="0">
                                                            <TextBlock Text="{Binding OrderId}" 
                                                                     Style="{StaticResource SubtitleTextStyle}"
                                                                     FontWeight="SemiBold"
                                                                     Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                                            <TextBlock Text="{Binding ServerName}" 
                                                                     Style="{StaticResource CaptionTextStyle}"
                                                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                        </StackPanel>

                                                        <!-- Order Status -->
                                                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                                            <Border Background="{Binding StatusColor, Converter={StaticResource StringToBrushConverter}}"
                                                                    CornerRadius="6" Padding="6,3">
                                                                <TextBlock Text="{Binding Status}" 
                                                                         Style="{StaticResource CaptionTextStyle}"
                                                                         FontWeight="SemiBold" 
                                                                         Foreground="White"/>
                                                            </Border>
                                                            <Border Background="{Binding DeliveryStatusColor, Converter={StaticResource StringToBrushConverter}}"
                                                                    CornerRadius="6" Padding="6,3">
                                                                <TextBlock Text="{Binding DeliveryStatus}" 
                                                                         Style="{StaticResource CaptionTextStyle}"
                                                                         FontWeight="SemiBold" 
                                                                         Foreground="White"/>
                                                            </Border>
                                                        </StackPanel>

                                                        <!-- Order Details and Actions -->
                                                        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,8,0,0">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <StackPanel Grid.Column="0">
                                                                <TextBlock Text="Items" 
                                                                         Style="{StaticResource CaptionTextStyle}"
                                                                         FontWeight="SemiBold"
                                                                         Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                                <TextBlock Text="{Binding ItemCount}" 
                                                                         Style="{StaticResource BodyTextStyle}"
                                                                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                                            </StackPanel>

                                                            <StackPanel Grid.Column="1">
                                                                <TextBlock Text="Total" 
                                                                         Style="{StaticResource CaptionTextStyle}"
                                                                         FontWeight="SemiBold"
                                                                         Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                                <TextBlock Text="{Binding TotalFormatted}" 
                                                                         Style="{StaticResource BodyTextStyle}"
                                                                         FontWeight="SemiBold"
                                                                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                                            </StackPanel>

                                                            <StackPanel Grid.Column="2">
                                                                <TextBlock Text="Time" 
                                                                         Style="{StaticResource CaptionTextStyle}"
                                                                         FontWeight="SemiBold"
                                                                         Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                                <TextBlock Text="{Binding CreatedAtFormatted}" 
                                                                         Style="{StaticResource BodyTextStyle}"
                                                                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                                            </StackPanel>

                                                            <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="4">
                                                                <Button Content="View" 
                                                                        Style="{StaticResource FluentSecondaryButtonStyle}"
                                                                        Click="ViewOrder_Click" Tag="{Binding}"/>
                                                                <Button Content="Waiting" 
                                                                        Background="{ThemeResource SystemFillColorCautionBrush}"
                                                                        Foreground="White"
                                                                        CornerRadius="4"
                                                                        Padding="12,6"
                                                                        FontSize="12"
                                                                        FontWeight="Medium"
                                                                        Click="MarkWaiting_Click" Tag="{Binding}"/>
                                                                <Button Content="Delivered" 
                                                                        Background="{ThemeResource SystemFillColorSuccessBrush}"
                                                                        Foreground="White"
                                                                        CornerRadius="4"
                                                                        Padding="12,6"
                                                                        FontSize="12"
                                                                        FontWeight="Medium"
                                                                        Click="MarkDelivered_Click" Tag="{Binding}"/>
                                                                <Button Content="Close" 
                                                                        Style="{StaticResource FluentSecondaryButtonStyle}"
                                                                        Click="CloseOrder_Click" Tag="{Binding}"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" 
              Background="{ThemeResource SystemFillColorAttentionBackground}" 
              Opacity="0.8"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                <ProgressRing IsActive="True" Width="40" Height="40" 
                            Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                <TextBlock Text="Loading orders..." 
                         Style="{StaticResource BodyTextStyle}"
                         Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
            </StackPanel>
        </Grid>

        <!-- Error Message -->
        <InfoBar Grid.Row="2" 
               x:Name="ErrorInfoBar"
               IsOpen="{Binding HasError}"
               Message="{Binding ErrorMessage}"
               Severity="Error"
               Style="{StaticResource FluentInfoBarStyle}"
               Margin="24"/>
    </Grid>
</Page>
