<Page
    x:Class="MagiDesk.Frontend.Views.BaseSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="24">
            <!-- Header -->
            <StackPanel Style="{StaticResource FluentPageHeaderStyle}">
                <TextBlock x:Name="CategoryTitle" Text="Settings Category" 
                           Style="{StaticResource TitleTextStyle}"/>
                <TextBlock x:Name="CategoryDescription" Text="Configure settings for this category" 
                           Style="{StaticResource CaptionTextStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Content Area -->
            <Border Style="{StaticResource FluentCardStyle}">
                <StackPanel x:Name="ContentPanel" Spacing="16">
                    <!-- Dynamic content will be added here -->
                    <TextBlock Text="Settings for this category are being loaded..." 
                               HorizontalAlignment="Center" 
                               Opacity="0.7"/>
                </StackPanel>
            </Border>

            <!-- Actions -->
            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right">
                <Button x:Name="ResetButton" Content="Reset to Defaults" Click="Reset_Click"/>
                <Button x:Name="SaveButton" Content="Save Changes" 
                        Style="{StaticResource AccentButtonStyle}" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
