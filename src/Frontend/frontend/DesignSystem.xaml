<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <!-- ============================================ -->
    <!-- FLUENT 2 DESIGN SYSTEM - MAGIDESK          -->
    <!-- ============================================ -->

    <!-- ============================================ -->
    <!-- FLUENT ICON GLYPHS                          -->
    <!-- ============================================ -->
    <x:String x:Key="IconMoney">&#xE8B9;</x:String>
    <x:String x:Key="IconChart">&#xE9D2;</x:String>
    <x:String x:Key="IconTable">&#xE8A9;</x:String>
    <x:String x:Key="IconClock">&#xE823;</x:String>
    <x:String x:Key="IconDocument">&#xE8A5;</x:String>
    <x:String x:Key="IconSettings">&#xE713;</x:String>
    <x:String x:Key="IconRefresh">&#xE72C;</x:String>
    <x:String x:Key="IconSuccess">&#xE73E;</x:String>
    <x:String x:Key="IconWarning">&#xE7BA;</x:String>
    <x:String x:Key="IconError">&#xE783;</x:String>
    <x:String x:Key="IconInfo">&#xE946;</x:String>
    <x:String x:Key="IconPeople">&#xE716;</x:String>
    <x:String x:Key="IconNotification">&#xE7E7;</x:String>
    <x:String x:Key="IconCalendar">&#xE787;</x:String>
    <x:String x:Key="IconCalculator">&#xE8EF;</x:String>

    <!-- ============================================ -->
    <!-- SPACING SYSTEM (8px Rhythm)                -->
    <!-- ============================================ -->
    <x:Double x:Key="Spacing4">4</x:Double>
    <x:Double x:Key="Spacing8">8</x:Double>
    <x:Double x:Key="Spacing12">12</x:Double>
    <x:Double x:Key="Spacing16">16</x:Double>
    <x:Double x:Key="Spacing20">20</x:Double>
    <x:Double x:Key="Spacing24">24</x:Double>
    <x:Double x:Key="Spacing32">32</x:Double>
    <x:Double x:Key="Spacing40">40</x:Double>
    <x:Double x:Key="Spacing48">48</x:Double>
    <x:Double x:Key="Spacing64">64</x:Double>

    <!-- ============================================ -->
    <!-- TYPOGRAPHY SYSTEM (Segoe UI Variable)      -->
    <!-- ============================================ -->
    
    <!-- Display (28-32px) -->
    <Style x:Key="DisplayTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI Variable"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Semibold"/>
        <Setter Property="LineHeight" Value="36"/>
    </Style>

    <!-- Title (20px) -->
    <Style x:Key="TitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI Variable"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Semibold"/>
        <Setter Property="LineHeight" Value="28"/>
    </Style>

    <!-- Subtitle (16px) -->
    <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI Variable"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="LineHeight" Value="24"/>
    </Style>

    <!-- Body (14px) -->
    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI Variable"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>

    <!-- Caption (12px) -->
    <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI Variable"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="LineHeight" Value="16"/>
    </Style>

    <!-- ============================================ -->
    <!-- MATERIALS (Mica & Acrylic)                   -->
    <!-- ============================================ -->
    
    <!-- Mica Alt Background Brush - Use solid color as fallback -->
    <SolidColorBrush x:Key="MicaAltBackgroundBrush" Color="{ThemeResource SolidBackgroundFillColorBaseBrush}"/>

    <!-- Acrylic Card Background (Layer 1) - Use solid color for compatibility -->
    <SolidColorBrush x:Key="AcrylicCardBrush" Color="{ThemeResource SolidBackgroundFillColorSecondaryBrush}"/>

    <!-- Acrylic Elevated Background (Layer 2) - Use solid color for compatibility -->
    <SolidColorBrush x:Key="AcrylicElevatedBrush" Color="{ThemeResource SolidBackgroundFillColorTertiaryBrush}"/>

    <!-- ============================================ -->
    <!-- CARD STYLES                                  -->
    <!-- ============================================ -->
    
    <!-- Standard Card -->
    <Style x:Key="FluentCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource AcrylicCardBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="8"/>
    </Style>

    <!-- Elevated Card (with shadow) -->
    <Style x:Key="FluentElevatedCardStyle" TargetType="Border" BasedOn="{StaticResource FluentCardStyle}">
        <Setter Property="Background" Value="{StaticResource AcrylicElevatedBrush}"/>
        <Setter Property="Margin" Value="16"/>
    </Style>

    <!-- Metric Card (for dashboard metrics) -->
    <Style x:Key="FluentMetricCardStyle" TargetType="Border" BasedOn="{StaticResource FluentCardStyle}">
        <Setter Property="Padding" Value="24"/>
        <Setter Property="MinHeight" Value="140"/>
        <Setter Property="CornerRadius" Value="8"/>
    </Style>

    <!-- ============================================ -->
    <!-- BUTTON STYLES                                -->
    <!-- ============================================ -->
    
    <!-- Primary Button -->
    <Style x:Key="FluentPrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>

    <!-- Secondary Button -->
    <Style x:Key="FluentSecondaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{ThemeResource ControlFillColorDefaultBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>

    <!-- ============================================ -->
    <!-- INPUT STYLES                                -->
    <!-- ============================================ -->
    
    <!-- TextBox Style -->
    <Style x:Key="FluentTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{ThemeResource ControlFillColorDefaultBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinHeight" Value="32"/>
    </Style>

    <!-- NumberBox Style -->
    <Style x:Key="FluentNumberBoxStyle" TargetType="NumberBox">
        <Setter Property="Background" Value="{ThemeResource ControlFillColorDefaultBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinHeight" Value="32"/>
    </Style>

    <!-- ComboBox Style -->
    <Style x:Key="FluentComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="{ThemeResource ControlFillColorDefaultBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinHeight" Value="32"/>
    </Style>

    <!-- ============================================ -->
    <!-- PAGE HEADER STYLE                           -->
    <!-- ============================================ -->
    
    <Style x:Key="FluentPageHeaderStyle" TargetType="StackPanel">
        <Setter Property="Margin" Value="24,16,24,0"/>
        <Setter Property="Spacing" Value="8"/>
    </Style>

    <!-- ============================================ -->
    <!-- STATUS BADGE STYLES                          -->
    <!-- ============================================ -->
    
    <Style x:Key="FluentStatusBadgeStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource SystemFillColorAttentionBackground}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <!-- ============================================ -->
    <!-- PROGRESS INDICATORS                          -->
    <!-- ============================================ -->
    
    <Style x:Key="FluentProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Background" Value="{ThemeResource ControlFillColorDisabledBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
        <Setter Property="Height" Value="4"/>
        <Setter Property="CornerRadius" Value="2"/>
    </Style>

    <!-- ============================================ -->
    <!-- LIST VIEW STYLES                             -->
    <!-- ============================================ -->
    
    <Style x:Key="FluentListViewStyle" TargetType="ListView">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="12"/>
                    <Setter Property="Margin" Value="0,0,0,4"/>
                    <Setter Property="Background" Value="{ThemeResource ControlFillColorDefaultBrush}"/>
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================ -->
    <!-- GRID LAYOUT HELPERS                          -->
    <!-- ============================================ -->
    
    <!-- Standard Content Grid -->
    <Style x:Key="FluentContentGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="24"/>
    </Style>

    <!-- Card Grid (for metric cards) -->
    <Style x:Key="FluentCardGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- ============================================ -->
    <!-- COMMANDBAR STYLE                             -->
    <!-- ============================================ -->
    
    <Style x:Key="FluentCommandBarStyle" TargetType="CommandBar">
        <Setter Property="Background" Value="{ThemeResource ControlFillColorDefaultBrush}"/>
        <Setter Property="DefaultLabelPosition" Value="Right"/>
    </Style>

    <!-- ============================================ -->
    <!-- NAVIGATION VIEW STYLE                        -->
    <!-- ============================================ -->
    
    <Style x:Key="FluentNavigationViewStyle" TargetType="NavigationView">
        <Setter Property="PaneDisplayMode" Value="Left"/>
        <Setter Property="IsPaneOpen" Value="True"/>
        <Setter Property="OpenPaneLength" Value="280"/>
        <Setter Property="CompactPaneLength" Value="48"/>
        <Setter Property="IsBackButtonVisible" Value="Auto"/>
        <Setter Property="IsSettingsVisible" Value="False"/>
    </Style>

    <!-- ============================================ -->
    <!-- EXPANDER STYLE                               -->
    <!-- ============================================ -->
    
    <Style x:Key="FluentExpanderStyle" TargetType="Expander">
        <Setter Property="Background" Value="{StaticResource AcrylicCardBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Margin" Value="{StaticResource Spacing8}"/>
    </Style>

    <!-- ============================================ -->
    <!-- INFO BAR STYLE                               -->
    <!-- ============================================ -->
    
    <Style x:Key="FluentInfoBarStyle" TargetType="InfoBar">
        <Setter Property="Margin" Value="16"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <!-- ============================================ -->
    <!-- TEACHING TIP STYLE                           -->
    <!-- ============================================ -->
    
    <Style x:Key="FluentTeachingTipStyle" TargetType="TeachingTip">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="IsLightDismissEnabled" Value="True"/>
    </Style>

    <!-- ============================================ -->
    <!-- ANIMATIONS & TRANSITIONS                     -->
    <!-- ============================================ -->
    
    <!-- Note: WinUI 3 uses implicit animations via Composition APIs -->
    <!-- These styles provide visual feedback for interactions -->
    
    <!-- Interactive Card with Shadow -->
    <Style x:Key="FluentInteractiveCardStyle" TargetType="Border" BasedOn="{StaticResource FluentCardStyle}">
        <Setter Property="Shadow">
            <Setter.Value>
                <ThemeShadow/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Transition Duration Constants -->
    <x:Double x:Key="TransitionDurationFast">0.15</x:Double>
    <x:Double x:Key="TransitionDurationNormal">0.3</x:Double>
    <x:Double x:Key="TransitionDurationSlow">0.5</x:Double>

    <!-- ============================================ -->
    <!-- ELEVATION/SHADOW HELPERS                     -->
    <!-- ============================================ -->
    
    <!-- Shadow for elevated cards -->
    <Style x:Key="FluentElevatedShadowStyle" TargetType="Border">
        <Setter Property="Shadow">
            <Setter.Value>
                <ThemeShadow/>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>

